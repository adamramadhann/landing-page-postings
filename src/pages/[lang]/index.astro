---
// src/pages/[lang]/index.astro
// Homepage dengan dynamic routing [lang]
import BaseLayout from '../../components/layouts/BaseLayout.astro';
import HeroSection from '../../components/sections/home/HeroSection.astro';
import ServicesSection from '../../components/sections/home/ServicesSection.astro';
import CTA from '../../components/sections/home/CTA.astro';
import { getTranslations } from '../../lib/i18n-data';
import { getBlogPosts } from '../../lib/blog';
import BlogCard from '../../components/blog/BlogCard.astro';
import type { Locale } from '../../lib/i18n-data';
import TrustedBy from '../../components/sections/home/TrustedBy.astro';
import AboutEcosystem from '../../components/sections/home/AboutEcosystem.astro';
import SpecializedServices from '../../components/sections/home/SpecializedServices.astro';
import ImpactCaseStudies from '../../components/sections/home/ImpactCaseStudies.astro';
import ImpactMetrics from '../../components/sections/home/ImpactMetrics.astro';
import ProcessSection from '../../components/sections/home/ProcessSection.astro';
import TestimonialsSection from '../../components/sections/home/TestimonialsSection.astro';
import ClientLogos from '@/components/sections/home/ClientLogos.astro';

// Generate static paths untuk ID dan EN
export function getStaticPaths() {
  return [
    { params: { lang: 'id' } },
    { params: { lang: 'en' } },
  ];
}

// Get lang dari URL params
const { lang } = Astro.params;
const locale = lang as Locale;

// Load translations
const t = await getTranslations(locale);

// Get featured blog posts
const blogPosts = (await getBlogPosts(locale)).slice(0, 3);

// SEO
const title = `${t.common.siteName} - ${t.hero.title}`;
const description = t.hero.description;
---

<BaseLayout title={title} description={description} lang={locale}>
  <!-- Hero Section -->
  <HeroSection currentLang={locale} />

  <!-- Trusted By / Logo Cloud -->
  <ClientLogos currentLang={locale} />

  <!-- Impact Metrics -->
  <SpecializedServices currentLang={locale} />

  <!-- Services Section -->
  <ServicesSection currentLang={locale} data={t.services} />

  <!-- Process Section -->
  <ProcessSection currentLang={locale} />

  <!-- Impact Case Studies -->
  <ImpactCaseStudies currentLang={locale} />

  <!-- Testimonials -->
  <TestimonialsSection currentLang={locale} /> 
   
  {
    blogPosts.length > 0 && (
      <section class="relative border-t border-white/10 bg-slate-950 py-16 sm:py-24">
        <!-- Dot grid pattern -->
        <div class="absolute inset-0 bg-dot-grid opacity-[0.02] pointer-events-none"></div>

        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <!-- Section Header -->
          <div class="mx-auto max-w-2xl text-center animate-fade-in">
            <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 bg-cyan-500/10 border border-cyan-500/20 rounded-full">
              <span class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></span>
              <span class="text-xs font-bold tracking-[0.2em] text-cyan-400 uppercase">Blog</span>
            </div>
            <h2 class="text-3xl font-bold tracking-tight sm:text-4xl text-white">
              {t.blog.title}
            </h2>
            <p class="mt-4 text-lg text-gray-400">
              {t.blog.subtitle}
            </p>
          </div>

          <!-- Blog Grid -->
          <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {
              blogPosts.map((post, index) => (
                <div
                  class="animate-fade-in"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <BlogCard post={post} currentLang={locale} />
                </div>
              ))
            }
          </div>

          <!-- View All Link -->
          <div class="mt-12 text-center">
            <a
              href={`/${locale === 'id' ? '' : locale + '/'}blog`}
              class="inline-flex items-center justify-center gap-2 rounded-md
                     bg-gradient-to-r from-cyan-600 to-teal-600 px-6 py-3 text-sm font-medium text-white
                     shadow-lg shadow-cyan-500/25 transition-all hover:shadow-cyan-500/40 hover:scale-105"
            >
              {t.blog.viewAll}
              <svg
                class="h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <CTA locale={locale} cta={t.cta} contactUrl={locale === 'en' ? '/en/contact' : '/kontak'} />
</BaseLayout>
