---
// src/pages/[lang]/index.astro
// Homepage dengan dynamic routing [lang]
import BaseLayout from '../../components/layouts/BaseLayout.astro';
import HeroSection from '../../components/sections/HeroSection.astro';
import ServicesSection from '../../components/sections/ServicesSection.astro';
import CTA from '../../components/sections/CTA.astro';
import { getTranslations } from '../../lib/i18n-data';
import { getBlogPosts } from '../../lib/blog';
import BlogCard from '../../components/blog/BlogCard.astro';
import type { Locale } from '../../lib/i18n-data';
import LogoCloud from '../../components/sections/LogoCloud.astro';
import AboutEcosystem from '../../components/sections/AboutEcosystem.astro';
import SpecializedServices from '../../components/sections/SpecializedServices.astro';
import ImpactCaseStudies from '../../components/sections/ImpactCaseStudies.astro';
import ImpactMetrics from '../../components/sections/ImpactMetrics.astro';
import ProcessSection from '../../components/sections/ProcessSection.astro';

// Generate static paths untuk ID dan EN
export function getStaticPaths() {
  return [
    { params: { lang: 'id' } },
    { params: { lang: 'en' } },
  ];
}

// Get lang dari URL params
const { lang } = Astro.params;
const locale = lang as Locale;

// Load translations
const t = await getTranslations(locale);

// Get featured blog posts
const blogPosts = (await getBlogPosts(locale)).slice(0, 3);

// SEO
const title = `${t.common.siteName} - ${t.hero.title}`;
const description = t.hero.description;
---

<BaseLayout title={title} description={description} lang={locale}>
  <!-- Hero Section -->
  <HeroSection currentLang={locale} />

  <LogoCloud currentLang={locale} />

  <SpecializedServices currentLang={locale} />

  <AboutEcosystem currentLang={locale} />
  <!-- <ImpactMetrics currentLang={locale} /> -->
  <ServicesSection currentLang={locale} data={t.services} />
  <ProcessSection currentLang={locale} /> 
   
  {
    blogPosts.length > 0 && (
      <section class="border-t bg-muted/50 py-16 sm:py-24">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="mx-auto max-w-2xl text-center animate-fade-in">
            <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
              {t.blog.title}
            </h2>
            <p class="mt-4 text-lg text-muted-foreground">
              {t.blog.subtitle}
            </p>
          </div>

          <!-- Blog Grid -->
          <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {
              blogPosts.map((post, index) => (
                <div
                  class="animate-fade-in"
                  style={`animation-delay: ${index * 100}ms`}
                >
                  <BlogCard post={post} currentLang={locale} />
                </div>
              ))
            }
          </div>

          <!-- View All Link -->
          <div class="mt-12 text-center">
            <a
              href={`/${locale === 'id' ? '' : locale + '/'}blog`}
              class="inline-flex items-center justify-center rounded-md
                     bg-primary px-6 py-3 text-sm font-medium text-primary-foreground
                     shadow transition-colors hover:bg-primary/90
                     focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
            >
              {t.blog.viewAll}
              <svg
                class="ml-2 h-4 w-4"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width={2}
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>
      </section>
    )
  }

  <!-- CTA Section -->
  <CTA locale={locale} cta={t.cta} contactUrl={locale === 'en' ? '/en/contact' : '/kontak'} />
</BaseLayout>
