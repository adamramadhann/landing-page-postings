---
// src/pages/[lang]/about.astro
// About Page dengan Creative Storytelling & Varied Layouts
import BaseLayout from '../../components/layouts/BaseLayout.astro';
import { getTranslations } from '../../lib/i18n-data';
import type { Locale } from '../../lib/i18n-data';

export function getStaticPaths() {
  return [{ params: { lang: 'id' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const locale = lang as Locale;
const t = await getTranslations(locale);

const title = locale === 'id' ? 'Tentang Kami - Posthinks Elevate' : 'About Us - Posthinks Elevate';
const description = locale === 'id' ? '360¬∞ Media Agency yang menghubungkan brand dengan audiens' : '360¬∞ Media Agency connecting brands with audiences';
---

<BaseLayout title={title} description={description} lang={locale}>
  <!-- HERO - Split Screen Diagonal -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-white dark:bg-gray-900">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-gradient-to-br from-primary/20 to-cyan-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-gradient-to-tr from-purple-500/20 to-pink-500/20 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left - Visual -->
        <div class="relative order-2 lg:order-1 animate-fade-in">
          <div class="relative">
            <!-- Main Image -->
            <div class="relative rounded-[3rem] overflow-hidden shadow-2xl rotate-3 hover:rotate-0 transition-transform duration-700">
