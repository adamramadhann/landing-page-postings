---
// src/pages/[lang]/contact.astro
// Contact Page dengan Modern Elegant Design
import BaseLayout from '../../components/layouts/BaseLayout.astro';
import ContactHero from '../../components/sections/contact/ContactHero.astro';
import { getTranslations } from '../../lib/i18n-data';
import type { Locale } from '../../lib/i18n-data';

export function getStaticPaths() {
  return [{ params: { lang: 'id' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const locale = lang as Locale;
const t = await getTranslations(locale);

const title = locale === 'id' ? 'Kontak - Posthinks Elevate' : 'Contact - Posthinks Elevate';
const description = t.contact.subtitle;

// Hero data
const heroData = {
  badge: locale === 'id' ? 'Hubungi Kami' : 'Get In Touch',
  title: locale === 'id' ? 'Mari Berkolaborasi' : "Let's Collaborate",
  subtitle: locale === 'id' ? 'Untuk Hasil Luar Biasa' : 'For Exceptional Results',
  description: locale === 'id'
    ? 'Kami siap membantu Anda mencapai tujuan marketing dengan solusi kreatif dan strategi yang terukur.'
    : 'We\'re ready to help you achieve marketing goals with creative solutions and measurable strategies.',
  cta: {
    text: locale === 'id' ? 'Mulai Sekarang' : 'Get Started',
    href: '#contact-form'
  }
};

const contactMethods = [
  {
    icon: 'üìß',
    title: 'Email',
    value: 'hello@posthinks.com',
    link: 'mailto:hello@posthinks.com',
    description: locale === 'id' ? 'Kirim email untuk inquiry detail' : 'Send email for detailed inquiries'
  },
  {
    icon: 'üì±',
    title: 'WhatsApp',
    value: '+62 812 3456 7890',
    link: 'https://wa.me/6281234567890',
    description: locale === 'id' ? 'Chat instan untuk quick response' : 'Instant chat for quick response'
  },
  {
    icon: 'üìç',
    title: locale === 'id' ? 'Alamat' : 'Address',
    value: locale === 'id' ? 'Jakarta Selatan, Indonesia' : 'South Jakarta, Indonesia',
    link: 'https://maps.google.com',
    description: locale === 'id' ? 'Mampang Prapatan Raya No. 123' : 'Mampang Prapatan Raya No. 123'
  }
];

const workingHours = locale === 'id' ? [
  { day: 'Senin - Jumat', hours: '09:00 - 18:00', status: 'open' },
  { day: 'Sabtu', hours: '10:00 - 15:00', status: 'limited' },
  { day: 'Minggu', hours: 'Tutup', status: 'closed' }
] : [
  { day: 'Monday - Friday', hours: '09:00 - 18:00', status: 'open' },
  { day: 'Saturday', hours: '10:00 - 15:00', status: 'limited' },
  { day: 'Sunday', hours: 'Closed', status: 'closed' }
];

const socialLinks = [
  {
    name: 'Instagram',
    url: 'https://instagram.com/posthinks',
    icon: 'i',
    color: 'from-cyan-500 to-teal-500'
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/company/posthinks',
    icon: 'in',
    color: 'from-teal-500 to-cyan-600'
  },
  {
    name: 'TikTok',
    url: 'https://tiktok.com/@posthinks',
    icon: 't',
    color: 'from-cyan-600 to-teal-600'
  }
];
---

<BaseLayout title={title} description={description} lang={locale}>
  <!-- Hero Section -->
  <ContactHero
    locale={locale}
    badge={heroData.badge}
    title={heroData.title}
    subtitle={heroData.subtitle}
    description={heroData.description}
    cta={heroData.cta}
  />

  <!-- CONTACT FORM SECTION -->
  <section class="relative py-24 bg-slate-950" id="contact-form">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Dot Grid Pattern -->
      <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

      <!-- Floating Gradient Orbs -->
      <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
      <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

      <!-- Floating Particles -->
      <div class="absolute top-1/4 right-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
      <div class="absolute top-1/3 left-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
      <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-16 animate-fade-up">
        <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-8">
          <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-sm font-bold text-white uppercase tracking-wider">{locale === 'id' ? 'Formulir Kontak' : 'Contact Form'}</span>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {locale === 'id' ? 'Kirim Pesan' : 'Send Message'}
        </h2>

        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          {locale === 'id'
            ? 'Isi formulir di bawah dan kami akan segera menghubungi Anda'
            : 'Fill out the form below and we\'ll get back to you promptly'}
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Contact Methods -->
        <div class="lg:col-span-1 space-y-6 animate-fade-up" style="animation-delay: 0.1s">
          <div class="bg-slate-900/60 rounded-2xl p-6 shadow-lg border border-white/10 backdrop-blur-sm">
            <h3 class="text-lg font-semibold text-white mb-6">
              {locale === 'id' ? 'Kontak Langsung' : 'Direct Contact'}
            </h3>

            <div class="space-y-4">
              {contactMethods.map((method, index) => (
                <a
                  href={method.link}
                  target="_blank"
                  rel="noopener"
                  class="flex items-start gap-4 p-4 rounded-xl hover:bg-slate-800/50 transition-all duration-300 group"
                >
                  <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-500/20 to-teal-500/20 flex items-center justify-center text-xl group-hover:scale-110 transition-transform border border-cyan-500/30">
                    {method.icon}
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="font-semibold text-white mb-1">{method.title}</h4>
                    <p class="text-sm text-gray-400 truncate">{method.value}</p>
                    <p class="text-xs text-gray-500 mt-1">{method.description}</p>
                  </div>
                  <svg class="w-5 h-5 text-gray-500 group-hover:text-cyan-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              ))}
            </div>
          </div>

          <!-- Working Hours -->
          <div class="bg-gradient-to-br from-cyan-600 to-teal-600 rounded-2xl p-6 shadow-lg">
            <h3 class="text-lg font-semibold text-white mb-6">
              {locale === 'id' ? 'Jam Operasional' : 'Working Hours'}
            </h3>

            <div class="space-y-3">
              {workingHours.map((schedule) => (
                <div class={`flex justify-between items-center py-3 px-4 rounded-lg ${
                  schedule.status === 'open' ? 'bg-white/20' :
                  schedule.status === 'limited' ? 'bg-white/10' :
                  'bg-white/10 opacity-60'
                }`}>
                  <span class="text-sm font-medium text-white">{schedule.day}</span>
                  <div class="flex items-center gap-3">
                    <span class="text-sm font-semibold text-white">{schedule.hours}</span>
                    {schedule.status === 'open' && (
                      <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
                    )}
                  </div>
                </div>
              ))}
            </div>

            <div class="mt-6 pt-6 border-t border-white/20">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm font-medium text-white">
                  {locale === 'id' ? 'Respon dalam 1 jam kerja' : 'Response within 1 working hour'}
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2 animate-fade-up" style="animation-delay: 0.2s">
          <div class="bg-slate-900/60 rounded-3xl shadow-xl border border-white/10 backdrop-blur-sm overflow-hidden">
            <!-- Form Header -->
            <div class="bg-gradient-to-r from-cyan-600 to-teal-600 p-8">
              <h3 class="text-2xl font-bold text-white mb-2">
                {locale === 'id' ? 'Kirim Pesan' : 'Send Message'}
              </h3>
              <p class="text-cyan-100">
                {locale === 'id'
                  ? 'Isi formulir di bawah dan kami akan segera menghubungi Anda'
                  : 'Fill out the form below and we\'ll get back to you promptly'}
              </p>
            </div>

            <!-- Form Content -->
            <div class="p-8">
              <form class="space-y-6">
                <!-- Personal Info -->
                <div class="grid md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Nama Lengkap' : 'Full Name'} *
                    </label>
                    <input
                      type="text"
                      required
                      placeholder={locale === 'id' ? 'Masukkan nama lengkap' : 'Enter full name'}
                      class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>

                  <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Email' : 'Email Address'} *
                    </label>
                    <input
                      type="email"
                      required
                      placeholder="email@example.com"
                      class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>
                </div>

                <!-- Company & Phone -->
                <div class="grid md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Perusahaan' : 'Company'}
                    </label>
                    <input
                      type="text"
                      placeholder={locale === 'id' ? 'Nama perusahaan' : 'Company name'}
                      class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>

                  <div class="space-y-2">
                    <label class="block text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Nomor Telepon' : 'Phone Number'}
                    </label>
                    <input
                      type="tel"
                      placeholder={locale === 'id' ? '+62 812 3456 7890' : '+1 234 567 8900'}
                      class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>
                </div>

                <!-- Service Selection -->
                <div class="space-y-2">
                  <label class="block text-sm font-semibold text-gray-300">
                    {locale === 'id' ? 'Layanan yang Diinginkan' : 'Service Interest'} *
                  </label>
                  <select class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200">
                    <option value="">{locale === 'id' ? 'Pilih layanan...' : 'Select service...'}</option>
                    <option value="buzzer">{locale === 'id' ? 'Buzzer & Influencer Marketing' : 'Buzzer & Influencer Marketing'}</option>
                    <option value="media">{locale === 'id' ? 'Media & Public Relations' : 'Media & Public Relations'}</option>
                    <option value="content">{locale === 'id' ? 'Content Creation & Strategy' : 'Content Creation & Strategy'}</option>
                    <option value="seo">{locale === 'id' ? 'SEO & Digital Performance' : 'SEO & Digital Performance'}</option>
                    <option value="branding">{locale === 'id' ? 'Brand Strategy & Consulting' : 'Brand Strategy & Consulting'}</option>
                  </select>
                </div>

                <!-- Message -->
                <div class="space-y-2">
                  <label class="block text-sm font-semibold text-gray-300">
                    {locale === 'id' ? 'Pesan Anda' : 'Your Message'} *
                  </label>
                  <textarea
                    rows="5"
                    required
                    placeholder={locale === 'id' ? 'Ceritakan tentang proyek atau kebutuhan Anda...' : 'Tell us about your project or needs...'}
                    class="w-full px-4 py-3 rounded-xl border border-white/10 bg-slate-800 text-white focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 resize-none placeholder-gray-500"
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                  type="submit"
                  class="w-full py-4 px-6 bg-gradient-to-r from-cyan-600 to-teal-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-cyan-500/25 hover:scale-[1.02] transition-all duration-300 flex items-center justify-center gap-3 group"
                >
                  <span>{locale === 'id' ? 'Kirim Pesan' : 'Send Message'}</span>
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- STATS SECTION -->
  <section class="py-16 bg-slate-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {[
          { value: '500+', label: locale === 'id' ? 'Kampanye' : 'Campaigns', color: 'text-cyan-400' },
          { value: '98%', label: locale === 'id' ? 'Kepuasan Klien' : 'Client Satisfaction', color: 'text-teal-400' },
          { value: '24/7', label: locale === 'id' ? 'Dukungan' : 'Support', color: 'text-cyan-500' },
          { value: '50+', label: locale === 'id' ? 'Klien Global' : 'Global Clients', color: 'text-teal-500' }
        ].map((stat, index) => (
          <div class="text-center">
            <div class={`text-4xl md:text-5xl font-bold ${stat.color} mb-2`}>{stat.value}</div>
            <div class="text-sm font-medium text-gray-400 uppercase tracking-wider">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SOCIAL MEDIA SECTION -->
  <section class="py-20 bg-slate-950">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Dot Grid Pattern -->
      <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

      <!-- Floating Gradient Orbs -->
      <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
      <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

      <!-- Floating Particles -->
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
      <div class="absolute top-1/3 right-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
      <div class="absolute bottom-1/4 left-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-8">
          <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-sm font-bold text-white uppercase tracking-wider">Social Media</span>
        </div>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
          {locale === 'id' ? 'Terhubung di Media Sosial' : 'Connect on Social Media'}
        </h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          {locale === 'id'
            ? 'Ikuti perkembangan terbaru dan insight eksklusif dari tim kami'
            : 'Follow latest updates and exclusive insights from our team'}
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {socialLinks.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener"
            class={`group bg-gradient-to-br ${social.color} rounded-2xl p-8 shadow-xl hover:shadow-2xl hover:-translate-y-2 transition-all duration-300`}
          >
            <div class="flex flex-col items-center text-center space-y-4">
              <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center text-2xl font-bold text-white mb-4 group-hover:scale-110 transition-transform">
                {social.icon}
              </div>
              <h3 class="text-xl font-semibold text-white">{social.name}</h3>
              <p class="text-sm text-white/80">
                {locale === 'id' ? 'Ikuti kami di' : 'Follow us on'} {social.name}
              </p>
              <div class="flex items-center gap-2 text-white/60 group-hover:text-white transition-colors">
                <span class="text-sm font-medium">{locale === 'id' ? 'Kunjungi' : 'Visit'}</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- MAP SECTION - Simplified -->
  <section class="py-20 bg-slate-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-br from-slate-900 to-slate-800 rounded-3xl overflow-hidden shadow-2xl border border-white/10">
        <div class="grid lg:grid-cols-2">
          <!-- Map -->
          <div class="h-[400px] lg:h-auto relative">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.6582174001185!2d106.82133631532725!3d-6.173986661231571!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f5d2e764b12f%3A0x3d2ad6e1e0e9bcc8!2sMampang%20Prapatan%2C%20South%20Jakarta%20City%2C%20Jakarta!5e0!3m2!1sen!2sid!4v1642400000000!5m2!1sen!2sid"
              class="absolute inset-0 w-full h-full filter grayscale contrast-125 brightness-90"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
            <div class="absolute inset-0 bg-gradient-to-r from-slate-900/50 to-transparent pointer-events-none"></div>
          </div>

          <!-- Location Info -->
          <div class="p-8 lg:p-12 flex flex-col justify-center">
            <div class="mb-8">
              <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/20 text-cyan-400 text-sm font-semibold mb-4">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                {locale === 'id' ? 'Lokasi Kantor' : 'Office Location'}
              </div>
              <h3 class="text-2xl font-bold text-white mb-4">
                {locale === 'id' ? 'Kantor Pusat Jakarta' : 'Jakarta Headquarters'}
              </h3>
              <p class="text-gray-300">
                {locale === 'id'
                  ? 'Kami berada di jantung kota Jakarta, siap melayani kebutuhan digital marketing Anda.'
                  : 'Located in the heart of Jakarta, ready to serve your digital marketing needs.'}
              </p>
            </div>

            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-cyan-400 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                <div>
                  <p class="text-sm font-semibold text-gray-400 uppercase tracking-wider">{locale === 'id' ? 'Alamat' : 'Address'}</p>
                  <p class="text-white">Mampang Prapatan Raya No. 123<br>Jakarta Selatan, Indonesia</p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-cyan-400 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                </svg>
                <div>
                  <p class="text-sm font-semibold text-gray-400 uppercase tracking-wider">{locale === 'id' ? 'Telepon' : 'Phone'}</p>
                  <a href="tel:+6281234567890" class="text-white hover:text-cyan-400 transition-colors">+62 812 3456 7890</a>
                </div>
              </div>

