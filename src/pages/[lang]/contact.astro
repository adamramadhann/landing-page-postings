---
// src/pages/[lang]/contact.astro
// Contact Page dengan Modern Elegant Design
import BaseLayout from '../../components/layouts/BaseLayout.astro';
import ContactHero from '../../components/sections/contact/ContactHero.astro';
import { getTranslations } from '../../lib/i18n-data';
import type { Locale } from '../../lib/i18n-data';

export function getStaticPaths() {
  return [{ params: { lang: 'id' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params;
const locale = lang as Locale;
const t = await getTranslations(locale);

const title = locale === 'id' ? 'Kontak - Posthinks Elevate' : 'Contact - Posthinks Elevate';
const description = t.contact.subtitle;

// Hero data
const heroData = {
  badge: locale === 'id' ? 'Hubungi Kami' : 'Get In Touch',
  title: locale === 'id' ? 'Mari Berkolaborasi' : "Let's Collaborate",
  subtitle: locale === 'id' ? 'Untuk Hasil Luar Biasa' : 'For Exceptional Results',
  description: locale === 'id'
    ? 'Kami siap membantu Anda mencapai tujuan marketing dengan solusi kreatif dan strategi yang terukur.'
    : 'We\'re ready to help you achieve marketing goals with creative solutions and measurable strategies.',
  cta: {
    text: locale === 'id' ? 'Mulai Sekarang' : 'Get Started',
    href: '#contact-form'
  }
};

const contactMethods = [
  {
    icon: 'üìß',
    title: 'Email',
    value: 'hello@posthinks.com',
    link: 'mailto:hello@posthinks.com',
    description: locale === 'id' ? 'Kirim email untuk inquiry detail' : 'Send email for detailed inquiries'
  },
  {
    icon: 'üì±',
    title: 'WhatsApp',
    value: '+62 812 3456 7890',
    link: 'https://wa.me/6281234567890',
    description: locale === 'id' ? 'Chat instan untuk quick response' : 'Instant chat for quick response'
  },
  {
    icon: 'üìç',
    title: locale === 'id' ? 'Alamat' : 'Address',
    value: locale === 'id' ? 'Jakarta Selatan, Indonesia' : 'South Jakarta, Indonesia',
    link: 'https://maps.google.com',
    description: locale === 'id' ? 'Mampang Prapatan Raya No. 123' : 'Mampang Prapatan Raya No. 123'
  }
];

const workingHours = locale === 'id' ? [
  { day: 'Senin - Jumat', hours: '09:00 - 18:00', status: 'open' },
  { day: 'Sabtu', hours: '10:00 - 15:00', status: 'limited' },
  { day: 'Minggu', hours: 'Tutup', status: 'closed' }
] : [
  { day: 'Monday - Friday', hours: '09:00 - 18:00', status: 'open' },
  { day: 'Saturday', hours: '10:00 - 15:00', status: 'limited' },
  { day: 'Sunday', hours: 'Closed', status: 'closed' }
];
---

<BaseLayout title={title} description={description} lang={locale}>
  <!-- Hero Section -->
  <ContactHero
    locale={locale}
    badge={heroData.badge}
    title={heroData.title}
    subtitle={heroData.subtitle}
    description={heroData.description}
    cta={heroData.cta}
  />

  <!-- CONTACT FORM SECTION -->
  <section class="relative py-16 sm:py-20 md:py-24 bg-slate-950" id="contact-form">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Dot Grid Pattern -->
      <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

      <!-- Floating Gradient Orbs -->
      <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
      <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

      <!-- Floating Particles -->
      <div class="absolute top-1/4 right-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
      <div class="absolute top-1/3 left-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
      <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Section Header -->
      <div class="text-center mb-12 sm:mb-14 md:mb-16 animate-fade-up">
        <div class="inline-flex items-center gap-2 px-4 sm:px-5 py-2 sm:py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-6 sm:mb-8">
          <span class="w-2 sm:w-2.5 h-2 sm:h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-xs sm:text-sm font-bold text-white uppercase tracking-wider">{locale === 'id' ? 'Formulir Kontak' : 'Contact Form'}</span>
        </div>

        <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
          {locale === 'id' ? 'Kirim Pesan' : 'Send Message'}
        </h2>

        <p class="text-base sm:text-lg md:text-xl text-gray-400 max-w-2xl mx-auto px-4 sm:px-0">
          {locale === 'id'
            ? 'Isi formulir di bawah dan kami akan segera menghubungi Anda'
            : 'Fill out the form below and we\'ll get back to you promptly'}
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-12">
        <!-- Contact Methods -->
        <div class="lg:col-span-1 space-y-4 sm:space-y-6 animate-fade-up order-2 lg:order-1" style="animation-delay: 0.1s">
          <div class="bg-slate-900/60 rounded-2xl p-4 sm:p-6 shadow-lg border border-white/10 backdrop-blur-sm">
            <h3 class="text-base sm:text-lg font-semibold text-white mb-4 sm:mb-6">
              {locale === 'id' ? 'Kontak Langsung' : 'Direct Contact'}
            </h3>

            <div class="space-y-3 sm:space-y-4">
              {contactMethods.map((method, index) => (
                <a
                  href={method.link}
                  target="_blank"
                  rel="noopener"
                  class="flex items-start gap-3 sm:gap-4 p-3 sm:p-4 rounded-xl hover:bg-slate-800/50 transition-all duration-300 group"
                >
                  <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-gradient-to-br from-cyan-500/20 to-teal-500/20 flex items-center justify-center text-lg sm:text-xl group-hover:scale-110 transition-transform border border-cyan-500/30">
                    {method.icon}
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="font-semibold text-white text-sm sm:text-base mb-1">{method.title}</h4>
                    <p class="text-xs sm:text-sm text-gray-400 truncate">{method.value}</p>
                    <p class="text-[10px] sm:text-xs text-gray-500 mt-1 hidden sm:block">{method.description}</p>
                  </div>
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-500 group-hover:text-cyan-400 group-hover:translate-x-1 transition-all flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              ))}
            </div>
          </div>

          <!-- Working Hours -->
          <div class="bg-gradient-to-br from-cyan-600 to-teal-600 rounded-2xl p-4 sm:p-6 shadow-lg">
            <h3 class="text-base sm:text-lg font-semibold text-white mb-4 sm:mb-6">
              {locale === 'id' ? 'Jam Operasional' : 'Working Hours'}
            </h3>

            <div class="space-y-2 sm:space-y-3">
              {workingHours.map((schedule) => (
                <div class={`flex justify-between items-center py-2 sm:py-3 px-3 sm:px-4 rounded-lg ${
                  schedule.status === 'open' ? 'bg-white/20' :
                  schedule.status === 'limited' ? 'bg-white/10' :
                  'bg-white/10 opacity-60'
                }`}>
                  <span class="text-xs sm:text-sm font-medium text-white">{schedule.day}</span>
                  <div class="flex items-center gap-2 sm:gap-3">
                    <span class="text-xs sm:text-sm font-semibold text-white">{schedule.hours}</span>
                    {schedule.status === 'open' && (
                      <span class="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full bg-green-400 animate-pulse"></span>
                    )}
                  </div>
                </div>
              ))}
            </div>

            <div class="mt-4 sm:mt-6 pt-4 sm:pt-6 border-t border-white/20">
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-xs sm:text-sm font-medium text-white">
                  {locale === 'id' ? 'Respon dalam 1 jam kerja' : 'Response within 1 working hour'}
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2 animate-fade-up order-1 lg:order-2" style="animation-delay: 0.2s">
          <div class="bg-slate-900/60 rounded-3xl shadow-xl border border-white/10 backdrop-blur-sm overflow-hidden">
            <!-- Form Header -->
            <div class="bg-gradient-to-r from-cyan-600 to-teal-600 p-6 sm:p-8">
              <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">
                {locale === 'id' ? 'Kirim Pesan' : 'Send Message'}
              </h3>
              <p class="text-sm sm:text-base text-cyan-100">
                {locale === 'id'
                  ? 'Isi formulir di bawah dan kami akan segera menghubungi Anda'
                  : 'Fill out the form below and we\'ll get back to you promptly'}
              </p>
            </div>

            <!-- Form Content -->
            <div class="p-6 sm:p-8">
              <form class="space-y-4 sm:space-y-6">
                <!-- Personal Info -->
                <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
                  <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Nama Lengkap' : 'Full Name'} *
                    </label>
                    <input
                      type="text"
                      required
                      placeholder={locale === 'id' ? 'Masukkan nama lengkap' : 'Enter full name'}
                      class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>

                  <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Email' : 'Email Address'} *
                    </label>
                    <input
                      type="email"
                      required
                      placeholder="email@example.com"
                      class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>
                </div>

                <!-- Company & Phone -->
                <div class="grid sm:grid-cols-2 gap-4 sm:gap-6">
                  <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Perusahaan' : 'Company'}
                    </label>
                    <input
                      type="text"
                      placeholder={locale === 'id' ? 'Nama perusahaan' : 'Company name'}
                      class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>

                  <div class="space-y-2">
                    <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                      {locale === 'id' ? 'Nomor Telepon' : 'Phone Number'}
                    </label>
                    <input
                      type="tel"
                      placeholder={locale === 'id' ? '+62 812 3456 7890' : '+1 234 567 8900'}
                      class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 placeholder-gray-500"
                    />
                  </div>
                </div>

                <!-- Service Selection -->
                <div class="space-y-2">
                  <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                    {locale === 'id' ? 'Layanan yang Diinginkan' : 'Service Interest'} *
                  </label>
                  <select class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200">
                    <option value="">{locale === 'id' ? 'Pilih layanan...' : 'Select service...'}</option>
                    <option value="buzzer">{locale === 'id' ? 'Buzzer & Influencer Marketing' : 'Buzzer & Influencer Marketing'}</option>
                    <option value="media">{locale === 'id' ? 'Media & Public Relations' : 'Media & Public Relations'}</option>
                    <option value="content">{locale === 'id' ? 'Content Creation & Strategy' : 'Content Creation & Strategy'}</option>
                    <option value="seo">{locale === 'id' ? 'SEO & Digital Performance' : 'SEO & Digital Performance'}</option>
                    <option value="branding">{locale === 'id' ? 'Brand Strategy & Consulting' : 'Brand Strategy & Consulting'}</option>
                  </select>
                </div>

                <!-- Message -->
                <div class="space-y-2">
                  <label class="block text-xs sm:text-sm font-semibold text-gray-300">
                    {locale === 'id' ? 'Pesan Anda' : 'Your Message'} *
                  </label>
                  <textarea
                    rows="5"
                    required
                    placeholder={locale === 'id' ? 'Ceritakan tentang proyek atau kebutuhan Anda...' : 'Tell us about your project or needs...'}
                    class="w-full px-3 sm:px-4 py-2.5 sm:py-3 rounded-xl border border-white/10 bg-slate-800 text-white text-sm sm:text-base focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/20 transition-all duration-200 resize-none placeholder-gray-500"
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                  type="submit"
                  class="w-full py-3 sm:py-4 px-6 bg-gradient-to-r from-cyan-600 to-teal-600 text-white font-semibold rounded-xl shadow-lg hover:shadow-cyan-500/25 hover:scale-[1.02] transition-all duration-300 flex items-center justify-center gap-2 sm:gap-3 group text-sm sm:text-base"
                >
                  <span>{locale === 'id' ? 'Kirim Pesan' : 'Send Message'}</span>
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- STATS SECTION -->
  <section class="py-12 sm:py-16 bg-slate-950">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8">
        {[
          { value: '500+', label: locale === 'id' ? 'Kampanye' : 'Campaigns', color: 'text-cyan-400' },
          { value: '98%', label: locale === 'id' ? 'Kepuasan Klien' : 'Client Satisfaction', color: 'text-teal-400' },
          { value: '24/7', label: locale === 'id' ? 'Dukungan' : 'Support', color: 'text-cyan-500' },
          { value: '50+', label: locale === 'id' ? 'Klien Global' : 'Global Clients', color: 'text-teal-500' }
        ].map((stat, index) => (
          <div class="text-center">
            <div class={`text-3xl sm:text-4xl md:text-5xl font-bold ${stat.color} mb-1 sm:mb-2`}>{stat.value}</div>
            <div class="text-[10px] sm:text-xs md:text-sm font-medium text-gray-400 uppercase tracking-wider">
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SOCIAL MEDIA SECTION -->
  <section class="py-16 sm:py-20 bg-slate-950 relative overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Dot Grid Pattern -->
      <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

      <!-- Floating Gradient Orbs -->
      <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
      <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

      <!-- Floating Particles -->
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
      <div class="absolute top-1/3 right-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
      <div class="absolute bottom-1/4 left-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-10 sm:mb-12">
        <div class="inline-flex items-center gap-2 px-4 sm:px-5 py-2 sm:py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-6 sm:mb-8">
          <span class="w-2 sm:w-2.5 h-2 sm:h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-xs sm:text-sm font-bold text-white uppercase tracking-wider">Social Media</span>
        </div>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-3 sm:mb-4">
          {locale === 'id' ? 'Terhubung di Media Sosial' : 'Connect on Social Media'}
        </h2>
        <p class="text-sm sm:text-base text-gray-400 max-w-2xl mx-auto px-4 sm:px-0">
          {locale === 'id'
            ? 'Ikuti perkembangan terbaru dan insight eksklusif dari tim kami'
            : 'Follow latest updates and exclusive insights from our team'}
        </p>
      </div>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8 max-w-5xl mx-auto">
        <!-- Instagram Card -->
        <a
          href="https://instagram.com/posthinks"
          target="_blank"
          rel="noopener"
          class="group relative bg-slate-900/60 backdrop-blur-xl rounded-3xl p-8 sm:p-10 border border-white/10 overflow-hidden transition-all duration-500 hover:scale-[1.02] hover:border-pink-500/50"
        >
          <!-- Animated Gradient Background -->
          <div class="absolute inset-0 bg-gradient-to-br from-pink-600/0 via-purple-600/0 to-orange-500/0 group-hover:from-pink-600/20 group-hover:via-purple-600/20 group-hover:to-orange-500/20 transition-all duration-500"></div>

          <!-- Glow Effect -->
          <div class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-pink-500 to-orange-500 rounded-full opacity-0 group-hover:opacity-30 blur-3xl transition-all duration-500"></div>
          <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full opacity-0 group-hover:opacity-30 blur-3xl transition-all duration-500"></div>

          <!-- Content -->
          <div class="relative z-10 flex flex-col items-center text-center">
            <!-- Icon Container -->
            <div class="relative mb-6">
              <div class="absolute inset-0 bg-gradient-to-br from-pink-500 via-purple-500 to-orange-500 rounded-2xl blur-xl opacity-0 group-hover:opacity-60 transition-opacity duration-500"></div>
              <div class="relative w-20 h-20 rounded-2xl bg-gradient-to-br from-pink-500 via-purple-500 to-orange-500 p-[2px] group-hover:rotate-6 transition-transform duration-500">
                <div class="w-full h-full rounded-2xl bg-slate-900 flex items-center justify-center">
                  <!-- Instagram Icon -->
                  <svg class="w-10 h-10 text-white group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Text -->
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-2 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-pink-400 group-hover:via-purple-400 group-hover:to-orange-400 transition-all duration-300">Instagram</h3>
            <p class="text-sm text-gray-400 mb-4">
              {locale === 'id' ? 'Ikuti kami di Instagram' : 'Follow us on Instagram'}
            </p>

            <!-- Followers Count -->
            <div class="flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 group-hover:border-pink-500/30 transition-colors">
              <span class="w-2 h-2 rounded-full bg-pink-500 animate-pulse"></span>
              <span class="text-xs font-semibold text-white">50K+ Followers</span>
            </div>
