            href={contactUrl}
            class="inline-flex items-center justify-center gap-3 px-10 py-5 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-bold text-lg rounded-2xl shadow-xl hover:shadow-cyan-500/50 hover:scale-105 transition-all duration-300 group"
          >
            {data.hero.cta.primary}
