      </div>

      {/* Floating Gradient Orbs */}
      <div class="absolute top-40 right-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-200/30 to-teal-200/30 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-40 left-20 w-[500px] h-[500px] bg-gradient-to-tr from-blue-200/30 to-cyan-200/30 rounded-full blur-3xl animate-float" style="animation-delay: -4s"></div>

      {/* Floating Particles */}
      <div class="absolute top-1/4 right-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
      <div class="absolute top-1/3 left-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
      <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-blue-500 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="text-5xl md:text-6xl lg:text-7xl font-black text-gray-900 mb-6 leading-tight">
          {data.featured.title}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          {data.featured.subtitle}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {data.featured.members.map((member, index) => (
          <div
            key={index}
            class="group relative bg-white rounded-[2.5rem] p-8 border border-gray-200 hover:border-cyan-300 transition-all duration-500 hover:shadow-2xl hover:-translate-y-2"
          >
            {/* Member Image */}
            <div class="relative mb-6">
              <div class="aspect-square rounded-3xl overflow-hidden mb-4">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                  loading="lazy"
                />
              </div>

              {/* Category Badge */}
              <div class="absolute top-4 right-4">
                <span className="inline-flex items-center gap-2 px-4 py-2 bg-cyan-100 rounded-full">
                  <span class="w-2 h-2 rounded-full bg-cyan-500"></span>
                  <span class="text-xs font-bold text-cyan-700 uppercase tracking-wider">
                    {member.category}
                  </span>
                </span>
              </div>
            </div>

            {/* Member Info */}
            <h3 class="text-xl font-black text-gray-900 mb-1 text-center group-hover:text-cyan-600 transition-colors duration-300">
              {member.name}
            </h3>
            <p class="text-sm text-gray-600 mb-6 text-center">
              {member.role}
            </p>

            {/* Stats */}
            <div class="grid grid-cols-3 gap-3 mb-6">
              {Object.entries(member.stats).map(([key, value]) => (
                <div key={key} class="text-center">
                  <div class="text-lg font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-teal-500 leading-none">
                    {value}
                  </div>
                  <div class="text-[10px] text-gray-500 uppercase mt-1">
                    {key}
                  </div>
                </div>
              ))}
            </div>

            {/* Quote */}
            <p class="text-sm text-gray-600 dark:text-gray-400 italic leading-relaxed mb-6 text-center">
              "{member.quote}"
            </p>

            {/* Achievements */}
            <div class="flex flex-wrap gap-2 justify-center">
              {member.achievements.map((achievement, i) => (
                <span key={i} class="px-3 py-1 text-xs font-bold bg-gray-100 text-gray-700 rounded-full">
                  {achievement}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

