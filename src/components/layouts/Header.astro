---
// src/components/layouts/Header.astro
// Modern Navbar with Cyan/Teal Theme
import { getTranslations, getAlternateUrl, type Locale } from '../../lib/i18n-data';

interface Props {
  currentLang: Locale;
}

const { currentLang } = Astro.props;

// Load translations
const t = await getTranslations(currentLang);

// Build navigation links with correct paths - ALL routes have prefix
const navLinks = [
  { href: `/${currentLang}`, label: t.nav.home },
  { href: `/${currentLang}/solutions`, label: t.nav.solutions },
  { href: `/${currentLang}/community`, label: t.nav.community },
  { href: `/${currentLang}/case-studies`, label: t.nav.caseStudies },
  // { href: `/${currentLang}/clients`, label: t.nav.clients },
  { href: `/${currentLang}/contact`, label: t.nav.contact },
];

// Language switcher URLs
const currentPath = Astro.url.pathname;
const idUrl = getAlternateUrl(currentPath, 'id');
const enUrl = getAlternateUrl(currentPath, 'en');
const contactUrl = `/${currentLang}/contact`;

// Determine active link
const getIsActive = (href: string) => {
  const pathWithoutLocale = currentPath.replace(/^\/(en|id)/, '') || '/';
  const hrefWithoutLocale = href.replace(/^\/(en|id)/, '') || '/';
  return pathWithoutLocale === hrefWithoutLocale;
};
---

<!-- Header dengan Cyan/Teal Theme - Solid Dark with Blur -->
<header id="navbar" class="sticky top-0 z-50 w-full bg-slate-950/90 backdrop-blur-xl border-b border-gradient-to-r from-cyan-500/30 via-teal-500/30 to-cyan-500/30 transition-all duration-300 relative">
  <nav class="container mx-auto px-3 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex h-16 sm:h-20 items-center justify-between">
      <!-- Logo - Posthinks Logo Only -->
      <a href={`/${currentLang}`} class="flex items-center group" aria-label="Posthinks Home">
        <div class="relative flex items-center justify-center transition-transform duration-300">
          <!-- Posthinks Logo Image - Responsive size -->
          <img
            src="/logo-posthinks.png"
            alt="Posthinks Logo"
            class="h-10 sm:h-12 lg:h-14 w-auto object-contain transform group-hover:scale-105 transition-transform duration-300"
            width="160"
            height="45"
          />

          <!-- Subtle Glow Effect on Hover -->
          <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-cyan-500/20 to-teal-500/20 opacity-0 group-hover:opacity-100 blur-xl transition-opacity duration-300"></div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex lg:items-center lg:space-x-1">
        {
          navLinks.map((link) => {
            const isActive = getIsActive(link.href);
            return (
              <a
                href={link.href}
                class={`relative px-4 py-2 text-sm font-medium rounded-lg transition-all duration-300
                  ${isActive
                    ? 'text-cyan-400 bg-cyan-950/50 border border-cyan-500/30'
                    : 'text-gray-300 hover:text-cyan-400 hover:bg-cyan-950/30'
                  }
                  animate-fade-in`}
                style={`animation-delay: ${navLinks.indexOf(link) * 50}ms`}
                aria-current={isActive ? 'page' : undefined}
              >
                {link.label}

                <!-- Active Indicator -->
                {isActive && (
                  <span class="absolute bottom-1 left-1/2 transform -translate-x-1/2 w-8 h-0.5 bg-gradient-to-r from-cyan-500 to-teal-500 rounded-full"></span>
                )}
              </a>
            );
          })
        }

        <!-- Language Switcher -->
        <div class="flex items-center space-x-1 border-l border-white/10 pl-6 ml-2">
          <a
            href={idUrl}
            class={`relative px-3 py-1.5 text-sm font-semibold rounded-lg transition-all duration-300 flex items-center gap-1.5
              ${currentLang === 'id'
                ? 'bg-gradient-to-r from-cyan-500 to-teal-500 text-white shadow-md shadow-cyan-500/20'
                : 'text-gray-400 hover:text-cyan-400 hover:bg-cyan-950/30'
              }`}
            aria-label="Switch to Indonesian"
            title="Bahasa Indonesia"
          >
            <span class="text-lg sm:text-base">ðŸ‡®ðŸ‡©</span>
            <span class="text-sm sm:text-base">Indonesia</span>
          </a>
          <a
            href={enUrl}
            class={`relative px-3 py-1.5 text-sm font-semibold rounded-lg transition-all duration-300 flex items-center gap-1.5
              ${currentLang === 'en'
                ? 'bg-gradient-to-r from-cyan-500 to-teal-500 text-white shadow-md shadow-cyan-500/20'
                : 'text-gray-400 hover:text-cyan-400 hover:bg-cyan-950/30'
              }`}
            aria-label="Switch to English"
            title="English"
          >
            <span class="text-lg sm:text-base">ðŸ‡¬ðŸ‡§</span>
            <span class="text-sm sm:text-base">English</span>
          </a>
        </div>

        <!-- CTA Button -->
        <a
          href={contactUrl}
          class="group relative inline-flex items-center justify-center rounded-xl
                 px-6 py-2.5 text-sm font-bold
                 bg-gradient-to-r from-cyan-500 via-teal-500 to-blue-500
                 text-white shadow-lg shadow-cyan-500/25
                 transition-all duration-300
                 hover:shadow-xl hover:shadow-cyan-500/40 hover:scale-105
                 overflow-hidden
                 animate-fade-in ml-4"
          style="animation-delay: 250ms"
        >
          <!-- Background Animation on Hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-600 via-teal-600 to-blue-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

          <!-- Shimmer Effect -->
          <div class="absolute inset-0 -translate-x-full group-hover:animate-shimmer bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>

          <span class="relative z-10 flex items-center gap-2">
            {t.nav.consultation}
            <svg class="w-4 h-4 transform group-hover:translate-x-0.5 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden inline-flex items-center justify-center rounded-xl p-2.5
               text-gray-300
               bg-white/5 border border-white/10
               hover:bg-cyan-950/30
               hover:text-cyan-400 hover:border-cyan-500/30
               transition-all duration-300
               focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-cyan-500 focus-visible:ring-offset-2"
        aria-expanded="false"
        aria-label="Toggle menu"
        id="mobile-menu-button"
      >
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      class="lg:hidden hidden"
      id="mobile-menu"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby="mobile-menu-button"
    >
      <div class="space-y-2 pb-6 pt-4">
        {
          navLinks.map((link) => {
            const isActive = getIsActive(link.href);
            return (
              <a
                href={link.href}
                class={`block rounded-xl px-4 py-3 text-base font-medium transition-all duration-300
                  ${isActive
                    ? 'text-cyan-400 bg-cyan-950/50 border border-cyan-500/30'
                    : 'text-gray-300 bg-white/5 border border-white/10 hover:bg-cyan-950/30 hover:text-cyan-400 hover:border-cyan-500/30'
                  }
                  role="menuitem`}
                aria-current={isActive ? 'page' : undefined}
              >
                <div class="flex items-center justify-between">
                  <span>{link.label}</span>
                  {isActive && (
                    <svg class="w-5 h-5 text-cyan-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  )}
                </div>
              </a>
            );
          })
        }

        <!-- Mobile Language Switcher -->
        <div class="flex items-center space-x-3 border-t border-white/10 px-4 pt-6 mt-4">
          <a
            href={idUrl}
            class={`flex-1 flex items-center justify-center gap-2 px-4 py-3 rounded-xl text-base font-semibold transition-all duration-300
              ${currentLang === 'id'
                ? 'bg-gradient-to-r from-cyan-500 to-teal-500 text-white shadow-md'
                : 'text-gray-400 bg-white/5 border border-white/10 hover:bg-cyan-950/30 hover:text-cyan-400'
              }`}
            aria-label="Switch to Indonesian"
          >
            <span class="text-lg">ðŸ‡®ðŸ‡©</span>
            <span>Indonesia</span>
          </a>
          <a
            href={enUrl}
            class={`flex-1 flex items-center justify-center gap-2 px-4 py-3 rounded-xl text-base font-semibold transition-all duration-300
              ${currentLang === 'en'
                ? 'bg-gradient-to-r from-cyan-500 to-teal-500 text-white shadow-md'
                : 'text-gray-400 bg-white/5 border border-white/10 hover:bg-cyan-950/30 hover:text-cyan-400'
              }`}
            aria-label="Switch to English"
          >
            <span class="text-lg">ðŸ‡¬ðŸ‡§</span>
            <span>English</span>
          </a>
        </div>

        <!-- Mobile CTA -->
        <div class="px-4 mt-4">
          <a
            href={contactUrl}
            class="group relative w-full inline-flex items-center justify-center rounded-xl
                   px-6 py-3 text-base font-bold
                   bg-gradient-to-r from-cyan-500 via-teal-500 to-blue-500
                   text-white shadow-lg shadow-cyan-500/25
                   transition-all duration-300
                   hover:shadow-xl hover:scale-105
                   overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-600 via-teal-600 to-blue-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

            <span class="relative z-10 flex items-center justify-center gap-2">
              {t.nav.consultation}
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </span>
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
    opacity: 0;
  }

  @keyframes shimmer {
    100% {
      transform: translateX(100%);
    }
  }

  .animate-shimmer {
    animation: shimmer 2s infinite;
  }

  /* Scroll Effect - Add shadow when scrolled */
  #navbar.scrolled {
    box-shadow: 0 4px 20px rgba(6, 182, 212, 0.1);
  }

  /* Gradient Border Bottom */
  #navbar::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, rgba(6, 182, 212, 0.3) 0%, rgba(20, 184, 166, 0.3) 50%, rgba(6, 182, 212, 0.3) 100%);
  }

  /* Optional: Glow effect on scroll */
  #navbar.scrolled::after {
    background: linear-gradient(90deg, rgba(6, 182, 212, 0.5) 0%, rgba(20, 184, 166, 0.5) 50%, rgba(6, 182, 212, 0.5) 100%);
    box-shadow: 0 4px 30px rgba(6, 182, 212, 0.15);
  }
</style>

<!-- Enhanced Mobile Menu Toggle Script with Scroll Effect -->
<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');

  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton?.getAttribute('aria-expanded') === 'true';
    mobileMenuButton?.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu?.classList.toggle('hidden');

    // Animate hamburger to X
    const svg = mobileMenuButton?.querySelector('svg');
    if (svg && !isExpanded) {
      svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
    } else {
      svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
    }
  });

  // Add scroll effect to navbar
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }

    lastScroll = currentScroll;
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!mobileMenuButton?.contains(e.target) && !mobileMenu?.contains(e.target)) {
      const isExpanded = mobileMenuButton?.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        mobileMenuButton?.setAttribute('aria-expanded', 'false');
        mobileMenu?.classList.add('hidden');

        // Reset hamburger icon
        const svg = mobileMenuButton?.querySelector('svg');
        if (svg) {
          svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
        }
      }
    }
  });

  // Close mobile menu on window resize
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024) {
      mobileMenu?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');

      // Reset hamburger icon
      const svg = mobileMenuButton?.querySelector('svg');
      if (svg) {
        svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
      }
    }
  });
</script>
