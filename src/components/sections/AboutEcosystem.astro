---
import AnimateOnScroll from '../ui/AnimateOnScroll.astro';

const ecosystem = [
  {
    title: "First Hand Buzzer",
    desc: "Posthinks menggerakkan lebih dari 100.000 talent pilihan untuk memicu diskusi organik yang membangun opini publik.",
    stats: "100K+ Active Talents",
    icon: "ðŸ’¬"
  },
  {
    title: "National Media Network",
    desc: "Akses ke 10.000+ jaringan media nasional dan lokal untuk kredibilitas dan jangkauan luas di seluruh Indonesia.",
    stats: "10K+ Media Outlets",
    icon: "ðŸ“¡"
  },
  {
    title: "High Impact SEO",
    desc: "Strategi Technical SEO dan CRO untuk menempatkan brand di Top 3 hasil pencarian dan mengubah trafik menjadi konversi.",
    stats: "Top 3 Search Authority",
    icon: "ðŸš€"
  },
  {
    title: "Viral Clipper Strategy",
    desc: "500+ akun clipper profesional yang ahli dalam algoritma video singkat untuk memastikan konten viral secara organik.",
    stats: "500+ Specialized Accounts",
    icon: "ðŸŽ¬"
  }
];
---

<section class="relative py-32 bg-white dark:bg-gray-900">
  {/* Subtle Background - CYAN/TEAL CONSISTENT */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {/* Grid Pattern */}
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05]">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#0891b2_1px,transparent_1px),linear-gradient(to_bottom,#0891b2_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    </div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-gradient-to-br from-cyan-500/5 to-teal-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-start">

      {/* LEFT SIDE: Content */}
      <div class="lg:w-1/2 lg:sticky lg:top-32">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 bg-cyan-50 dark:bg-cyan-950/20 border border-cyan-200 dark:border-cyan-800 rounded-full">
          <span class="w-2 h-2 rounded-full bg-cyan-500"></span>
          <span class="text-sm font-semibold text-cyan-700 dark:text-cyan-400">Our Ecosystem</span>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
          A 360Â° Digital
          <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-teal-500">
            Powerhouse
          </span>
        </h2>

        <p class="text-base md:text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-8">
          Posthinks menyatukan data, pengaruh, dan jaringan masif untuk memastikan brand Anda mendominasi pasar.
        </p>

        <div class="flex items-center gap-4 sm:gap-6">
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">4</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Core Pillars</div>
          </div>
          <div class="w-px h-8 sm:h-12 bg-gray-300 dark:bg-gray-700"></div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">100K+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Active Talents</div>
          </div>
          <div class="w-px h-8 sm:h-12 bg-gray-300 dark:bg-gray-700"></div>
          <div class="text-center">
            <div class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white">10K+</div>
            <div class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">Media Partners</div>
          </div>
        </div>
      </div>

      {/* RIGHT SIDE: Ecosystem Items */}
      <div class="lg:w-1/2 space-y-6 md:space-y-8">
        {ecosystem.map((item, index) => (
          <AnimateOnScroll
            key={item.title}
            animation="fade-up"
            delay={index * 100}
            duration={700}
            class="group relative bg-white dark:bg-gray-800 rounded-2xl p-6 md:p-8 border border-gray-200 dark:border-gray-700 hover:border-cyan-500/50 dark:hover:border-cyan-500/50 transition-all duration-300 hover:shadow-lg"
          >
            <div class="flex items-start gap-4 md:gap-6">
              {/* Icon - Cyan/Teal Only */}
              <div class="flex-shrink-0 w-12 h-12 sm:w-16 sm:h-16 rounded-2xl bg-gradient-to-br from-cyan-50 to-teal-50 dark:from-cyan-900/30 dark:to-teal-900/30 flex items-center justify-center text-2xl sm:text-3xl group-hover:scale-110 transition-transform duration-300">
                {item.icon}
              </div>

              {/* Content */}
              <div class="flex-1">
                <h3 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-cyan-600 dark:group-hover:text-cyan-400 transition-colors duration-300">
                  {item.title}
                </h3>

                <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 leading-relaxed mb-4">
                  {item.desc}
                </p>

                {/* Stats Badge - Cyan/Teal Only */}
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-50 dark:bg-cyan-950/20 rounded-xl">
                  <div class="w-2 h-2 rounded-full bg-gradient-to-br from-cyan-500 to-teal-500"></div>
                  <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">{item.stats}</span>
                </div>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
        ))}
      </div>

    </div>
  </div>
</section>
