---
// src/components/sections/ImpactCaseStudies.astro
// Featured Case Studies on Homepage - Same design as CaseStudiesGrid
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  currentLang: 'id' | 'en';
}

const { currentLang: lang } = Astro.props;

const caseStudiesUrl = lang === 'en' ? '/en/case-studies' : '/id/case-studies';

// Case studies data - SAME STRUCTURE as case studies page
const caseStudies = [
  {
    id: 'unilever',
    brand: 'Unilever',
    product: 'Multi-Brand Campaign',
    logo: 'U',
    category: 'FMCG',
    industry: 'FMCG',
    year: '2024',
    image: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&q=80',
    featured: true,
    color: 'from-blue-600 to-cyan-500',
    tags: ['Cross-brand Activation', 'Discussion Content', 'KOL Integration'],
    challenge: {
      id: 'Target 20,000 comments/bulan dengan cross-brand activation antar produk Unilever',
      en: 'Target 20,000 comments/month with cross-brand activation between Unilever products'
    },
    solution: {
      id: 'Cross-brand activation antar produk, Konten pemicu perdebatan ringan, Integrasi KOL untuk reach boost',
      en: 'Cross-brand activation between products, Discussion-triggering content, KOL integration for reach boost'
    },
    results: [
      { metric: '500K+', label: { id: 'Engagement', en: 'Engagement' } },
      { metric: '+10-15%', label: { id: 'ER Growth', en: 'ER Growth' } },
      { metric: '3 Months', label: { id: 'Duration', en: 'Duration' } }
    ],
    testimonial: {
      id: 'Strategi cross-brand dan konten diskusi dari Posthinks sangat efektif meningkatkan engagement kami.',
      en: 'Posthinks cross-brand strategy and discussion content were very effective in increasing our engagement.'
    }
  },
  {
    id: 'suzuki',
    brand: 'Suzuki',
    product: 'Community Engagement',
    logo: 'S',
    category: 'Automotive',
    industry: 'Automotive',
    year: '2024',
    image: 'https://images.unsplash.com/photo-1552519507-da3b142c6e3d?w=800&q=80',
    featured: false,
    color: 'from-red-600 to-orange-500',
    tags: ['Interactive Content', 'Active Response', 'Community Collaboration'],
    challenge: {
      id: 'Target 10,000 comments/bulan dengan aktivasi konten interaktif',
      en: 'Target 10,000 comments/month with interactive content activation'
    },
    solution: {
      id: 'Aktivasi konten interaktif (polling/quiz), Respon aktif di kolom komentar, Kolaborasi komunitas otomotif',
      en: 'Interactive content activation (polling/quiz), Active response in comments, Automotive community collaboration'
    },
    results: [
      { metric: '300K+', label: { id: 'Reach', en: 'Reach' } },
      { metric: '+8-12%', label: { id: 'ER Growth', en: 'ER Growth' } },
      { metric: '2 Months', label: { id: 'Duration', en: 'Duration' } }
    ],
    testimonial: {
      id: 'Respon aktif dan kolaborasi komunitas sangat membantu meningkatkan engagement Suzuki.',
      en: 'Active responses and community collaboration greatly helped increase Suzuki engagement.'
    }
  },
  {
    id: 'bri',
    brand: 'Bank BRI',
    product: 'Financial Education',
    logo: 'B',
    category: 'Banking',
    industry: 'Finance',
    year: '2024',
    image: 'https://images.unsplash.com/photo-1559526324-4b87b5e36e44?w=800&q=80',
    featured: false,
    color: 'from-blue-600 to-indigo-600',
    tags: ['Financial Education', 'Moment Campaign', 'UGC Challenge'],
    challenge: {
      id: 'Target 5,000 comments/bulan dengan edukasi finansial format pendek',
      en: 'Target 5,000 comments/month with short-format financial education'
    },
    solution: {
      id: 'Edukasi finansial format pendek, Campaign relevan momen (Payday, gajian), UGC melalui challenge berhadiah',
      en: 'Short-format financial education, Moment-relevant campaigns (Payday), UGC through challenge with prizes'
    },
    results: [
      { metric: '150K+', label: { id: 'New Followers', en: 'New Followers' } },
      { metric: '+5-8%', label: { id: 'ER Growth', en: 'ER Growth' } }
    ],
    testimonial: {
      id: 'Pendekatan edukasi yang relevan dengan momen gajian sangat efektif untuk audience kami.',
      en: 'Educational approach relevant to payday moments was very effective for our audience.'
    }
  }
];

const t = {
  id: {
    title: 'Studi Kasus',
    titleHighlight: 'Terbaru',
    subtitle: 'Lihat bagaimana strategi kami menghasilkan impact nyata dan measurable untuk brand-brand terkemuka.',
    challenge: 'Tantangan',
    viewDetails: 'Lihat Studi Kasus',
    viewAll: 'Lihat Semua Case Studies',
    cta: 'Ingin hasil serupa untuk bisnis Anda?'
  },
  en: {
    title: 'Featured',
    titleHighlight: 'Case Studies',
    subtitle: 'See how our strategies deliver real, measurable impact for leading brands.',
    challenge: 'Challenge',
    viewDetails: 'View Case Study',
    viewAll: 'View All Case Studies',
    cta: 'Ready to achieve similar results for your business?'
  }
};

const data = t[lang];
---

<section class="relative py-24 lg:py-32 bg-slate-950 overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Dot Grid Pattern -->
    <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

    <!-- Floating Gradient Orbs - Cyan/Teal Only -->
    <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
    <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

    <!-- Animated Lines -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-cyan-500/10 to-transparent animate-pulse"></div>
    <div class="absolute bottom-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-teal-500/10 to-transparent animate-pulse" style="animation-delay: 1s"></div>

    <!-- Floating Particles -->
    <div class="absolute top-1/4 right-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
    <div class="absolute top-1/3 left-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
    <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
      <div class="text-center mb-16 lg:mb-20">
        <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-8">
          <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-sm font-bold text-white uppercase tracking-wider">Case Studies</span>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
          {data.title} <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-teal-400">{data.titleHighlight}</span>
        </h2>

        <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
          {data.subtitle}
        </p>
      </div>
    </AnimateOnScroll>

    <!-- Case Studies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 mb-16">
      {caseStudies.map((cs, index) => (
        <AnimateOnScroll
          key={cs.id}
          animation="fade-up"
          delay={index * 100}
          duration={700}
          class="case-study-card"
        >
          <div class="group relative bg-slate-900/60 border border-white/10 rounded-3xl overflow-hidden transition-all duration-500 hover:shadow-[0_30px_60px_rgba(8,145,178,0.15)] hover:border-cyan-500/30 flex flex-col h-full">

            <!-- Image Header -->
            <div class="relative aspect-[16/10] overflow-hidden">
              <img
                src={cs.image}
                alt={cs.brand}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <!-- Category Badge -->
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-slate-900/90 backdrop-blur-md border border-white/20 text-[10px] font-bold uppercase tracking-widest text-white rounded-lg shadow-sm">
                  {cs.category}
                </span>
              </div>

              <!-- Brand & Year on Hover -->
              <div class="absolute bottom-4 left-6 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <h3 class="text-white font-bold text-xl">{cs.brand}</h3>
                <p class="text-cyan-400 text-xs font-medium uppercase tracking-wider">{cs.year}</p>
              </div>
            </div>

            <!-- Card Content -->
            <div class="p-6 lg:p-8 flex flex-col flex-grow relative overflow-hidden">

              <!-- Normal State Content -->
              <div class="transition-all duration-500 group-hover:opacity-0 group-hover:-translate-y-8">
                <div class="mb-4">
                  <h4 class="text-white font-bold text-lg mb-1">{cs.brand}</h4>
                  <p class="text-gray-400 text-xs font-medium">{cs.product}</p>
                </div>

                <p class="text-sm text-gray-400 leading-relaxed line-clamp-2 mb-6">
                  <span class="font-bold text-gray-300">{data.challenge}:</span> {cs.challenge[lang]}
                </p>

                <div class="flex items-center gap-4 lg:gap-6 py-4 border-t border-white/10">
                  {cs.results.slice(0, 2).map((res) => (
                    <div>
                      <div class="text-lg lg:text-xl font-black text-white leading-none mb-1">{res.metric}</div>
                      <div class="text-[9px] uppercase tracking-widest font-bold text-gray-500">{res.label[lang]}</div>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Hover State Content (Testimonial) -->
              <div class="absolute inset-x-6 lg:inset-x-8 top-6 lg:top-8 opacity-0 group-hover:opacity-100 translate-y-8 group-hover:translate-y-0 transition-all duration-500 pointer-events-none group-hover:pointer-events-auto">
                <svg class="w-8 h-8 text-cyan-500/20 mb-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                </svg>
                <p class="text-sm lg:text-base text-gray-300 italic leading-relaxed font-light mb-4">
                  "{cs.testimonial[lang]}"
                </p>
                <div class="w-10 h-0.5 bg-gradient-to-r from-cyan-400 to-teal-400"></div>
              </div>

              <!-- View Details Button -->
              <div class="mt-auto pt-4 lg:pt-6">
                <a
                  href={`${caseStudiesUrl}#${cs.id}`}
                  class="inline-flex items-center justify-center w-full py-3 px-6 rounded-xl border border-white/10 text-sm font-bold text-white transition-all duration-300 group/btn hover:bg-gradient-to-r hover:from-cyan-600 hover:to-teal-600 hover:border-transparent hover:shadow-[0_10px_20px_-5px_rgba(8,145,178,0.4)]"
                >
                  <span>{data.viewDetails}</span>
                  <svg class="w-4 h-4 ml-2 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      ))}
    </div>

    <!-- CTA Section -->
    <AnimateOnScroll animation="fade-up" delay={500} duration={700}>
      <div class="text-center">
        <p class="text-lg md:text-xl text-gray-400 mb-8">{data.cta}</p>

        <a
          href={caseStudiesUrl}
          class="group inline-flex items-center gap-4 px-10 py-5 bg-gradient-to-r from-cyan-600 to-teal-600 text-white font-bold text-lg rounded-2xl shadow-xl shadow-cyan-500/25 hover:shadow-cyan-500/40 hover:scale-105 transition-all duration-300 relative overflow-hidden"
        >
          <!-- Background Animation -->
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-700 to-teal-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

          <span class="relative z-10">{data.viewAll}</span>
          <svg class="w-5 h-5 relative z-10 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </AnimateOnScroll>
  </div>
</section>

<style>
  @keyframes float-particle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    25% {
      transform: translate(20px, -30px) scale(1.1);
      opacity: 0.8;
    }
    50% {
      transform: translate(-10px, -50px) scale(0.9);
      opacity: 0.5;
    }
    75% {
      transform: translate(30px, -20px) scale(1.05);
      opacity: 0.7;
    }
  }

  .animate-float-particle {
    animation: float-particle 10s ease-in-out infinite;
  }

  /* Smooth transition untuk card */
  .case-study-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Efek image brightness saat hover */
  .group:hover img {
    filter: brightness(0.8) contrast(1.1);
  }

  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
