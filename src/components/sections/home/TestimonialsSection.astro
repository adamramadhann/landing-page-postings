// src/components/sections/TestimonialsSection.astro
// Testimonials Carousel Section - 3 Cards, Scroll 1 by 1
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  currentLang: 'id' | 'en';
}

const { currentLang: lang } = Astro.props;

const data = {
  id: {
    title: "Apa Kata",
    titleHighlight: "Klien Kami",
    subtitle: "Dengar langsung dari brand yang sudah merasakan hasil kerja sama dengan kami",
    wantResults: 'Ingin jadi next success story?',
    getStarted: 'Mulai Sekarang'
  },
  en: {
    title: "What Our",
    titleHighlight: "Clients Say",
    subtitle: "Hear directly from brands that have experienced the results of working with us",
    wantResults: 'Want to be our next success story?',
    getStarted: 'Get Started'
  }
};

const content = data[lang];
const contactUrl = lang === 'id' ? '/id/contact' : '/en/contact';

// Testimonials data
const testimonials = [
  {
    quote: lang === 'id'
      ? "Posthinks membantu kami mencapai 500K+ engagement dalam 3 bulan. Strategy mereka data-driven dan execution sangat profesional. Highly recommended!"
      : "Posthinks helped us achieve 500K+ engagement in just 3 months. Their data-driven strategy and professional execution are top-notch. Highly recommended!",
    name: "Sarah Wijaya",
    company: "Unilever",
    result: "500K+ Engagement",
    avatar: "SW"
  },
  {
    quote: lang === 'id'
      ? "Kami melihat pertumbuhan reach 300K+ dalam 2 bulan saja. Team Posthinks sangat responsive dan paham industri otomotif. Hasil nyata yang bisa kita measure."
      : "We saw 300K+ reach growth in just 2 months. The Posthinks team is very responsive and understands the automotive industry. Real measurable results.",
    name: "Budi Santoso",
    company: "Suzuki",
    result: "300K+ Reach",
    avatar: "BS"
  },
  {
    quote: lang === 'id'
      ? "150K+ new followers dalam 4 bulan dengan engagement rate yang terus meningkat. Posthinks benar-benar membantu kami strengthen presence di social media."
      : "150K+ new followers in 4 months with continuously increasing engagement rate. Posthinks truly helped us strengthen our social media presence.",
    name: "Rina Hartono",
    company: "Bank BRI",
    result: "150K+ New Followers",
    avatar: "RH"
  },
  {
    quote: lang === 'id'
      ? "Engagement rate meningkat 40% dalam 2 bulan. Konten yang dibuat sangat relevan dengan target audiens kami dan execution sangat tepat waktu."
      : "Engagement rate increased by 40% in 2 months. The content created is very relevant to our target audience and execution is always on time.",
    name: "Andi Pratama",
    company: "Telkom Indonesia",
    result: "+40% ER",
    avatar: "AP"
  },
  {
    quote: lang === 'id'
      ? "Campaign kami berhasil mencapai 1M+ impressions dengan budget yang sangat efisien. Team Posthinks sangat kreatif dan paham tren terkini."
      : "Our campaign reached 1M+ impressions with very efficient budget. The Posthinks team is very creative and understands the latest trends.",
    name: "Dewi Lestari",
    company: "Pertamina",
    result: "1M+ Impressions",
    avatar: "DL"
  }
];
---

<section class="relative py-20 md:py-24 bg-slate-950 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/8 to-teal-500/6 rounded-full blur-3xl animate-orb-drift"></div>
    <div class="absolute bottom-20 left-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/6 to-cyan-500/4 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
      <div class="text-center mb-12 lg:mb-16">
        <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-cyan-500/10 border border-cyan-500/20 backdrop-blur-sm mb-8">
          <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
          <span class="text-sm font-bold text-cyan-400 uppercase tracking-wider">Testimonials</span>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
          {content.title} <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-teal-400">{content.titleHighlight}</span>
        </h2>

        <p class="text-lg md:text-xl text-gray-400 max-w-3xl mx-auto">
          {content.subtitle}
        </p>
      </div>
    </AnimateOnScroll>

    <!-- Testimonials Carousel - 3 Cards Visible -->
    <AnimateOnScroll animation="fade-up" delay={200} duration={700}>
      <div class="relative testimonials-carousel" id="testimonials-carousel">
        <!-- Carousel Container with Overflow Hidden -->
        <div class="overflow-hidden rounded-2xl">
          <!-- Track - Shows 3 cards, scrolls 1 card at a time -->
          <div class="flex transition-transform duration-500 ease-out testimonials-track" id="testimonials-track" style="width: calc((100% / 3) * {testimonials.length});">

            {testimonials.map((testimonial, index) => (
              <div
                class="flex-shrink-0 testimonials-card px-3"
                style="width: calc(100% / 3);"
                data-index={index}
              >
                <div class="relative bg-gradient-to-br from-slate-900/80 to-slate-900/60 backdrop-blur-sm border border-white/10 rounded-2xl p-6 lg:p-8 transition-all duration-300 h-full flex flex-col hover:scale-105 hover:shadow-[0_20px_40px_rgba(8,145,178,0.2)]">

                  <!-- Result Badge - Top Right -->
                  <div class="absolute top-5 right-5">
                    <div class="flex items-center gap-1.5 px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20">
                      <svg class="w-3 h-3 text-cyan-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-[10px] font-bold text-cyan-400">{testimonial.result}</span>
                    </div>
                  </div>

                  <!-- Large Quote Icon -->
                  <div class="w-12 h-12 mb-4 opacity-10">
                    <svg class="w-full h-full text-cyan-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                    </svg>
                  </div>

                  <!-- Quote -->
                  <p class="text-sm lg:text-base text-gray-200 leading-relaxed mb-6 font-light line-clamp-4">
                    "{testimonial.quote}"
                  </p>

                  <!-- Author Info -->
                  <div class="flex items-center gap-4 pt-4 border-t border-white/10 mt-auto">
                    <!-- Avatar -->
                    <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-cyan-500 to-teal-500 flex items-center justify-center text-white font-bold text-sm flex-shrink-0 shadow-lg shadow-cyan-500/20">
                      {testimonial.avatar}
                    </div>

                    <!-- Name & Company -->
                    <div class="min-w-0">
                      <h4 class="text-white font-bold text-sm leading-tight">{testimonial.name}</h4>
                      <p class="text-gray-500 text-[10px] font-semibold uppercase tracking-wide mt-0.5">{testimonial.company}</p>
                    </div>
                  </div>
                </div>
              </div>
            ))}

          </div>
        </div>

        <!-- Navigation Arrows -->
        <button
          class="carousel-nav carousel-nav-prev absolute left-0 top-1/2 -translate-y-1/2 -translate-x-0 lg:-translate-x-5 w-11 h-11 rounded-full bg-slate-900/90 border border-white/20 backdrop-blur-sm flex items-center justify-center text-white transition-all duration-300 group z-20"
          id="prev-btn"
          aria-label="Previous testimonial"
        >
          <svg class="w-5 h-5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>

        <button
          class="carousel-nav carousel-nav-next absolute right-0 top-1/2 -translate-y-1/2 translate-x-0 lg:translate-x-5 w-11 h-11 rounded-full bg-slate-900/90 border border-white/20 backdrop-blur-sm flex items-center justify-center text-white transition-all duration-300 group z-20"
          id="next-btn"
          aria-label="Next testimonial"
        >
          <svg class="w-5 h-5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>

        <!-- Progress Indicator -->
        <div class="flex items-center justify-center gap-2 mt-8" id="carousel-progress">
          <span class="text-sm font-semibold text-cyan-400" id="current-slide">1</span>
          <span class="text-sm text-gray-600">/</span>
          <span class="text-sm font-semibold text-gray-500" id="total-slides">3</span>
        </div>
      </div>
    </AnimateOnScroll>

    <!-- CTA -->
    <AnimateOnScroll animation="fade-up" delay={400} duration={700}>
      <div class="mt-16 text-center">
        <p class="text-base md:text-lg text-gray-400 mb-6">
          {content.wantResults}
        </p>
        <a
          href={contactUrl}
          class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-cyan-600 to-teal-600 text-white font-bold rounded-2xl shadow-xl shadow-cyan-500/25 hover:shadow-cyan-500/40 hover:scale-105 transition-all duration-300"
        >
          <span>{content.getStarted}</span>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </AnimateOnScroll>
  </div>
</section>

<style>
  /* Carousel base styles */
  .testimonials-carousel {
    -webkit-overflow-scrolling: touch;
  }

  .testimonials-track {
    will-change: transform;
  }

  .testimonials-card {
    /* Padding for gap effect */
  }

  /* Active nav button - scale only */
  .carousel-nav:not(.disabled):hover {
    @apply bg-cyan-600 border-cyan-500;
    transform: scale(1.15);
  }

  /* Icon stays in place, no movement */

  /* Disabled state */
  .carousel-nav.disabled {
    @apply opacity-30 cursor-not-allowed bg-slate-800 border-white/10;
  }

  .carousel-nav.disabled:hover {
    transform: none;
  }

  .carousel-nav.disabled svg {
    transform: none;
  }

  /* Smooth scale transition for cards */
  .testimonials-card > div {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease;
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .testimonials-track {
      transition: none;
    }

    .carousel-nav {
      transition: none;
    }

    .testimonials-card > div {
      transform: none !important;
    }
  }

  /* Mobile responsive - 1 card visible */
  @media (max-width: 768px) {
    .testimonials-track {
      width: 100% !important;
    }

    .testimonials-card {
      width: 100% !important;
    }

    .carousel-nav {
      @apply w-10 h-10;
    }
  }
</style>

<script>
  // Testimonials Carousel Logic - 3 Cards, Scroll 1 by 1
  document.addEventListener('DOMContentLoaded', () => {
    const track = document.getElementById('testimonials-track');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const currentSlideEl = document.getElementById('current-slide');
    const totalSlidesEl = document.getElementById('total-slides');

    if (!track || !prevBtn || !nextBtn) return;

    let currentIndex = 0;
    const totalSlides = track.children.length;
    const visibleSlides = window.innerWidth >= 768 ? 3 : 1;
    const maxIndex = Math.max(0, totalSlides - visibleSlides);

    // Update total slides display
    if (totalSlidesEl) {
      totalSlidesEl.textContent = totalSlides.toString();
    }

    // Update carousel position
    const updateCarousel = () => {
      // Clamp index
      if (currentIndex < 0) currentIndex = 0;
      if (currentIndex > maxIndex) currentIndex = maxIndex;

      // Calculate percentage to translate
      // Each card is 33.33% of track width (on desktop)
      const translatePercentage = currentIndex * (100 / visibleSlides);
      track.style.transform = `translateX(-${translatePercentage}%)`;

      // Update progress display
      if (currentSlideEl) {
        currentSlideEl.textContent = (currentIndex + 1).toString();
      }

      // Update button states
      updateButtonStates();
    };

    // Update button disabled states
    const updateButtonStates = () => {
      // Disable prev button at start
      if (currentIndex <= 0) {
        prevBtn.classList.add('disabled');
        prevBtn.disabled = true;
      } else {
        prevBtn.classList.remove('disabled');
        prevBtn.disabled = false;
      }

      // Disable next button at end
      if (currentIndex >= maxIndex) {
        nextBtn.classList.add('disabled');
        nextBtn.disabled = true;
      } else {
        nextBtn.classList.remove('disabled');
        nextBtn.disabled = false;
      }
    };

    // Next slide
    const nextSlide = () => {
      if (currentIndex < maxIndex) {
        currentIndex++;
        updateCarousel();
      }
    };

    // Previous slide
    const prevSlide = () => {
      if (currentIndex > 0) {
        currentIndex--;
        updateCarousel();
      }
    };

    // Event listeners for buttons
    nextBtn.addEventListener('click', nextSlide);
    prevBtn.addEventListener('click', prevSlide);

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
      } else if (e.key === 'ArrowRight') {
        nextSlide();
      }
    });

    // Touch swipe support
    let touchStartX = 0;
    let touchEndX = 0;

    track.addEventListener('touchstart', (e: TouchEvent) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    track.addEventListener('touchend', (e: TouchEvent) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    }, { passive: true });

    const handleSwipe = () => {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
    };

    // Handle window resize
    window.addEventListener('resize', () => {
      const newVisibleSlides = window.innerWidth >= 768 ? 3 : 1;
      const newMaxIndex = Math.max(0, totalSlides - newVisibleSlides);

      // Adjust current index if needed
      if (currentIndex > newMaxIndex) {
        currentIndex = newMaxIndex;
      }

      // Update track width and card widths
      if (newVisibleSlides === 1) {
        track.style.width = '100%';
        track.querySelectorAll('.testimonials-card').forEach(card => {
          (card as HTMLElement).style.width = '100%';
        });
      } else {
        track.style.width = `calc((100% / 3) * ${totalSlides})`;
        track.querySelectorAll('.testimonials-card').forEach(card => {
          (card as HTMLElement).style.width = 'calc(100% / 3)';
        });
      }

      updateCarousel();
    });

    // Initialize
    updateCarousel();
  });
</script>
