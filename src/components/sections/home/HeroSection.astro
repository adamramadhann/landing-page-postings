---
// src/components/sections/home/HeroSection.astro
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  currentLang: 'id' | 'en';
}

const { currentLang: lang } = Astro.props;

const heroData = {
  id: {
    badge: "Social Media Specialist",
    title: "Tingkatkan Presence Brand Anda di Media Sosial",
    description: "Kami bantu brand Anda berkembang di media sosial dengan strategi berbasis data yang terbukti menghasilkan engagement, konversi, dan hasil nyata.",
    cta: { primary: "Mulai Sekarang", secondary: "Lihat Hasil Karya Kami" }
  },
  en: {
    badge: "Social Media Specialist",
    title: "Boost Your Brand's Social Media Presence",
    description: "We help brands grow on social media with data-driven strategies that drive engagement, conversions, and deliver real results you can see.",
    cta: { primary: "Get Started", secondary: "View Our Work" }
  }
};

const data = heroData[lang];

// Gambar Placeholder Berkualitas (Ganti dengan aset lokal Anda nanti)
const productImg = "https://images.unsplash.com/photo-1583511655857-d19b40a7a54e?q=80&w=1000&auto=format&fit=crop";
const userAvatar = "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=100&auto=format&fit=crop";
---

<section class="relative min-h-[85vh] md:min-h-[90dvh] lg:min-h-screen flex items-center overflow-hidden bg-slate-950">

  <!-- Base gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-cyan-950/30"></div>

  <!-- Animated gradient orbs - Responsive sizes -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Desktop orbs -->
    <div class="hidden md:block absolute top-[-15%] right-[-10%] w-[700px] h-[700px] bg-gradient-to-br from-cyan-500/20 to-teal-500/15 rounded-full blur-[150px] animate-orb-drift"></div>
    <div class="hidden md:block absolute bottom-[-20%] left-[-5%] w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/15 to-emerald-500/10 rounded-full blur-[120px] animate-orb-drift" style="animation-delay: -5s;"></div>
    <div class="hidden md:block absolute top-[40%] left-[30%] w-[300px] h-[300px] bg-cyan-400/10 rounded-full blur-[100px] animate-orb-pulse-slow"></div>

    <!-- Mobile orbs - smaller -->
    <div class="block md:hidden absolute top-[-10%] right-[-20%] w-[300px] h-[300px] bg-gradient-to-br from-cyan-500/15 to-teal-500/10 rounded-full blur-[80px] animate-orb-drift"></div>
    <div class="block md:hidden absolute bottom-[-15%] left-[-10%] w-[200px] h-[200px] bg-gradient-to-tr from-teal-500/10 to-emerald-500/5 rounded-full blur-[60px] animate-orb-drift" style="animation-delay: -3s;"></div>
  </div>

  <!-- Elegant dot grid pattern -->
  <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

  <!-- Subtle noise texture -->
  <div class="absolute inset-0 bg-noise opacity-[0.02]"></div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-12 md:py-16">
    <div class="grid lg:grid-cols-2 gap-8 md:gap-12 items-center">

      <!-- Content Section -->
      <div class="max-w-2xl space-y-6 md:space-y-8 order-2 lg:order-1">
        <AnimateOnScroll animation="fade-up" delay={0}>
          <div class="inline-flex items-center gap-2 px-3 sm:px-4 py-1.5 sm:py-2 rounded-full bg-cyan-50/10 dark:bg-cyan-950/30 border border-cyan-500/20 text-cyan-400 text-xs sm:text-sm font-bold shadow-sm backdrop-blur-sm">
            <span class="flex h-1.5 sm:h-2 w-1.5 sm:w-2 rounded-full bg-cyan-400 animate-pulse"></span>
            {data.badge}
          </div>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={100}>
          <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black text-white leading-[1.15] sm:leading-[1.1] tracking-tight">
            {data.title.split(' ').map((word, i) =>
              i === 2 ? <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-teal-400 block sm:inline">{word} </span> : word + ' '
            )}
          </h1>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={200}>
          <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl text-gray-300 leading-relaxed max-w-2xl font-medium">
            {data.description}
          </p>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={300}>
          <div class="flex flex-col sm:flex-wrap gap-3 sm:gap-4">
            <a href="#" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-500 hover:to-teal-500 text-white font-bold rounded-xl sm:rounded-2xl transition-all shadow-xl shadow-cyan-500/20 hover:-translate-y-1 active:scale-95 text-sm sm:text-base">
              {data.cta.primary}
            </a>
            <a href="#" class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white/5 border border-white/10 text-white font-bold rounded-xl sm:rounded-2xl hover:bg-white/10 transition-all backdrop-blur-sm text-sm sm:text-base">
              {data.cta.secondary}
            </a>
          </div>
        </AnimateOnScroll>
      </div>

      <!-- 3D Visual Section - Responsive -->
      <div class="relative h-[400px] sm:h-[500px] md:h-[600px] lg:h-[650px] w-full flex items-center justify-center order-1 lg:order-2">

        <!-- SVG Background - Responsive -->
        <svg class="absolute inset-0 w-full h-full opacity-20 sm:opacity-30" viewBox="0 0 600 600">
          <path class="animate-draw" d="M150 300 Q 300 100 450 300 T 300 500" stroke="#00D1D1" stroke-width="1.5" fill="none" stroke-dasharray="8 8" />
          <circle cx="300" cy="300" r="220" stroke="#00A3A3" stroke-width="1" fill="none" stroke-dasharray="4 4" />
        </svg>

        <!-- Main Card - Responsive sizing -->
        <div class="relative z-30 w-[280px] sm:w-[300px] md:w-[320px] bg-slate-900/80 backdrop-blur-3xl rounded-[2rem] sm:rounded-[2.5rem] shadow-[0_50px_100px_-20px_rgba(0,0,0,0.5)] border border-white/10 p-3 sm:p-4 animate-float">
          <!-- Header -->
          <div class="flex items-center justify-between mb-3 sm:mb-4 px-1 sm:px-2">
            <div class="flex items-center gap-1.5 sm:gap-2">
              <img src={userAvatar} alt="User" class="w-6 h-6 sm:w-8 sm:h-8 rounded-full border-2 border-cyan-500/50 p-0.5" />
              <div class="flex flex-col">
                <span class="text-[10px] sm:text-[11px] font-black text-white leading-none">paws_studio</span>
                <span class="text-[8px] sm:text-[9px] text-gray-400 font-bold">New York, USA</span>
              </div>
            </div>
            <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20"><path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"/></svg>
          </div>

          <!-- Product Image -->
          <div class="aspect-square rounded-2xl sm:rounded-3xl mb-3 sm:mb-4 overflow-hidden relative group">
            <img src={productImg} alt="Product" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            <div class="absolute bottom-2 sm:bottom-4 left-2 sm:left-4 right-2 sm:right-4 py-1.5 sm:py-2.5 bg-black/40 backdrop-blur-md border border-white/10 rounded-lg sm:rounded-xl flex items-center justify-center gap-1.5 sm:gap-2">
              <span class="text-cyan-400 text-[8px] sm:text-[10px] font-black uppercase tracking-wider">Shop Product</span>
              <svg class="w-2.5 h-2.5 sm:w-3 sm:h-3 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="px-1 sm:px-2 flex items-center justify-between">
            <div class="flex gap-3 sm:gap-4">
               <svg class="w-5 h-5 sm:w-6 sm:h-6 text-gray-400 hover:text-red-400 cursor-pointer transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
               <svg class="w-5 h-5 sm:w-6 sm:h-6 text-gray-400 hover:text-cyan-400 cursor-pointer transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
            </div>
            <div class="flex -space-x-1.5 sm:-space-x-2">
               {[1,2,3].map(() => <div class="w-4 h-4 sm:w-5 sm:h-5 rounded-full border-2 border-slate-900 bg-cyan-500/20"></div>)}
            </div>
          </div>
        </div>

        <!-- Floating Stat Cards - Visible on all, responsive sizes -->
        <div class="absolute top-[5%] sm:top-[5%] md:top-[8%] right-0 z-40 bg-slate-900/90 backdrop-blur-xl p-2.5 sm:p-3 md:p-4 rounded-lg sm:rounded-xl md:rounded-2xl shadow-2xl border border-cyan-500/20 animate-float [animation-delay:1s]">
          <div class="flex items-center gap-1.5 sm:gap-2 md:gap-3">
             <div class="w-6 h-6 sm:w-8 md:w-10 md:h-10 rounded-full bg-gradient-to-br from-cyan-500/20 to-teal-500/20 flex items-center justify-center">
                <svg class="w-3 h-3 sm:w-4 md:w-5 sm:h-4 md:h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
             </div>
             <div>
                <p class="text-[7px] sm:text-[8px] md:text-[9px] font-black text-gray-400 uppercase tracking-widest leading-none mb-0.5 md:mb-1">Engagements</p>
                <p class="text-xs sm:text-sm md:text-base font-black text-white leading-none">+124.5%</p>
             </div>
          </div>
        </div>

        <!-- Chart Card - Responsive sizes -->
        <div class="absolute bottom-[5%] md:bottom-[8%] right-[3%] md:right-[5%] z-40 bg-slate-900/90 backdrop-blur-md p-2.5 sm:p-3 md:p-4 sm:p-5 rounded-lg sm:rounded-xl md:rounded-3xl shadow-2xl border border-white/10 w-28 sm:w-36 md:w-40 lg:w-52 animate-bounce-slow">
           <div class="flex justify-between items-center mb-1.5 sm:mb-2 md:mb-4">
              <span class="text-[7px] sm:text-[8px] md:text-[10px] font-black uppercase text-white">Conversions</span>
              <span class="text-[7px] sm:text-[8px] md:text-[10px] font-bold text-cyan-400">Weekly</span>
           </div>
           <div class="flex items-end gap-1 sm:gap-1.5 md:gap-2 h-10 sm:h-12 md:h-20">
              <div class="flex-1 bg-cyan-500/20 rounded-lg h-[40%] transition-all hover:bg-cyan-500/40"></div>
              <div class="flex-1 bg-cyan-500/30 rounded-lg h-[70%] transition-all hover:bg-cyan-500/50"></div>
              <div class="flex-1 bg-gradient-to-t from-cyan-500 to-teal-500 rounded-lg h-[100%]"></div>
              <div class="flex-1 bg-cyan-500/20 rounded-lg h-[60%] transition-all hover:bg-cyan-500/40"></div>
              <div class="flex-1 bg-cyan-500/20 rounded-lg h-[85%] transition-all hover:bg-cyan-500/40"></div>
           </div>
        </div>

        <!-- Sale Card - Hide on small mobile only -->
        <div class="hidden sm:block absolute bottom-[10%] md:bottom-[10%] left-[-2%] z-40 bg-gradient-to-br from-cyan-600 to-teal-600 text-white p-2.5 sm:p-3 md:p-4 rounded-lg sm:rounded-xl md:rounded-2xl shadow-2xl animate-float [animation-delay:1.5s]">
           <div class="flex items-center gap-1.5 sm:gap-2 md:gap-3">
              <div class="w-5 h-5 sm:w-6 md:w-8 md:h-8 rounded-lg bg-white/20 flex items-center justify-center">
                 <svg class="w-2.5 h-2.5 sm:w-3 md:w-4 sm:h-3 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
              </div>
              <div>
                 <p class="text-[7px] sm:text-[8px] font-bold opacity-80 uppercase leading-none mb-0.5 md:mb-1">Recent Sale</p>
                 <p class="text-xs sm:text-sm font-black">$285.00</p>
              </div>
           </div>
        </div>

        <!-- Live Badge - Responsive -->
        <div class="absolute top-[12%] sm:top-[15%] md:top-[20%] left-[3%] z-40 bg-slate-900/90 backdrop-blur-md py-1 sm:py-1.5 sm:py-2.5 px-2 sm:px-3 md:px-4 rounded-full shadow-xl border border-cyan-500/20 flex items-center gap-1 sm:gap-1.5 md:gap-2 animate-bounce-slow">
           <div class="w-1 h-1 sm:w-1.5 md:w-2 sm:h-1.5 md:h-2 rounded-full bg-cyan-400 animate-ping"></div>
           <span class="text-[7px] sm:text-[8px] md:text-[10px] font-black text-white uppercase tracking-tighter">Live Campaign</span>
        </div>

      </div>

    </div>
  </div>
</section>

<style>
  /* KEYFRAMES */
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(1deg); }
  }

  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce-slow 5s ease-in-out infinite;
  }

  .animate-draw {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: draw 4s ease-out forwards infinite;
  }

  @keyframes draw {
    0% { stroke-dashoffset: 1000; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -1000; }
  }

  /* Responsive Breakpoints */
  @media (max-width: 640px) {
    /* Mobile adjustments */
    section {
      min-height: 85vh;
    }

    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .grid {
      gap: 2rem;
    }

    h1 {
      font-size: 1.25rem; /* 20px */
      line-height: 1.3;
    }

    h1 span {
      display: inline;
    }

    .text-gray-300 {
      font-size: 0.875rem; /* 14px */
      line-height: 1.4;
    }

    .text-cyan-400 {
      font-size: 0.75rem; /* 12px */
    }

    .px-6.py-3 {
      padding: 0.75rem 1rem;
      font-size: 0.875rem;
    }

    .px-8.py-4 {
      padding: 0.75rem 1rem;
      font-size: 0.875rem;
    }

    /* Hide sale card on very small mobile only */
    .absolute.bottom-\\[10\\%\\] {
      display: none;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    /* Tablet adjustments */
    section {
      min-height: 90vh;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .max-w-2xl {
      margin: 0 auto;
    }

    /* Keep text left-aligned on tablet */
    .text-center {
      text-align: left;
    }

    .flex-wrap {
      justify-content: flex-start;
    }

    /* Scale down 3D elements slightly */
    .h-\[400px\] {
      height: 450px;
    }

    .h-\[500px\] {
      height: 550px;
    }

    .h-\[600px\] {
      height: 550px;
    }

    /* Adjust floating cards positions */
    .absolute.top-\\[5\\%\\] {
      top: 3%;
    }

    .absolute.bottom-\\[5%\\] {
      bottom: 3%;
    }

    .absolute.bottom-\\[10%\\] {
      bottom: 8%;
    }

    .absolute.top-\\[15%\\] {
      top: 12%;
    }

    .absolute.top-\\[20%\\] {
      top: 15%;
    }
  }

  @media (min-width: 1025px) {
    /* Desktop - use default styles */
    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .h-\[400px\] {
      height: 400px;
    }

    .h-\[500px\] {
      height: 500px;
    }

    .h-\[600px\] {
      height: 600px;
    }

    .h-\[650px\] {
      height: 650px;
    }
  }
</style>
