---
// src/components/sections/ClientLogos.astro

const clientsRow1 = [
  { name: 'Pertamina', src: '/logos/pertamina.svg' },
  { name: 'Samsung', src: '/logos/samsung.svg' },
  { name: 'Grab', src: '/logos/grab.svg' },
  { name: 'Prudential', src: '/logos/prudential.svg' },
  { name: 'Prodia', src: '/logos/prodia.svg' },
  { name: 'BCA', src: '/logos/bca.svg' },
  { name: 'BRI', src: '/logos/bri.svg' },
  { name: 'Viu', src: '/logos/viu.svg' },
  { name: 'OCBC', src: '/logos/ocbc.svg' },
  { name: 'Narasi', src: '/logos/narasi.svg' },
];

const clientsRow2 = [
  { name: 'Jasa Marga', src: '/logos/jasamarga.svg' },
  { name: 'Kominfo', src: '/logos/kominfo.svg' },
  { name: 'Telkom Indonesia', src: '/logos/telkom.svg' },
  { name: 'BNI', src: '/logos/bni.svg' },
  { name: 'Unilever', src: '/logos/unilever.svg' },
  { name: 'Vivo', src: '/logos/vivo.svg' },
  { name: 'Suzuki', src: '/logos/suzuki.svg' },
  { name: 'Shopee', src: '/logos/shopee.svg' },
  { name: 'Kemenkes', src: '/logos/kemenkes.svg' },
  { name: 'IM3', src: '/logos/im3.svg' },
];

// Duplikasi untuk efek seamless infinite scroll
const row1 = [...clientsRow1, ...clientsRow1];
const row2 = [...clientsRow2, ...clientsRow2];
---

<section class="py-24 bg-slate-950 overflow-hidden relative">
  <!-- Background Pattern -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute inset-0 bg-dot-grid opacity-[0.02]"></div>
    <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-cyan-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-teal-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 mb-16 text-center relative z-10">
    <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-cyan-500/10 border border-cyan-500/20 mb-6">
      <span class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></span>
      <span class="text-[10px] font-black text-cyan-400 uppercase tracking-[0.3em]">Our Network</span>
    </div>
    <h2 class="text-4xl md:text-5xl font-black text-white tracking-tighter">
      Dipercaya oleh <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-teal-400">Brand Ternama</span>
    </h2>
  </div>

  <div class="flex flex-col gap-8 md:gap-12 relative">

    <div class="relative flex overflow-hidden group">
      <div class="flex animate-marquee-left whitespace-nowrap gap-12 md:gap-20 items-center py-4">
        {row1.map((client) => (
          <div class="w-32 md:w-48 flex-shrink-0 flex items-center justify-center grayscale opacity-30 hover:grayscale-0 hover:opacity-100 hover:scale-110 transition-all duration-500 ease-out cursor-pointer">
            <img
              src={client.src}
              alt={client.name}
              class="max-h-10 md:max-h-14 w-auto object-contain invert brightness-0 hover:invert-0 hover:brightness-100"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>

    <div class="relative flex overflow-hidden group">
      <div class="flex animate-marquee-right whitespace-nowrap gap-12 md:gap-20 items-center py-4">
        {row2.map((client) => (
          <div class="w-32 md:w-48 flex-shrink-0 flex items-center justify-center grayscale opacity-30 hover:grayscale-0 hover:opacity-100 hover:scale-110 transition-all duration-500 ease-out cursor-pointer">
            <img
              src={client.src}
              alt={client.name}
              class="max-h-10 md:max-h-14 w-auto object-contain invert brightness-0 hover:invert-0 hover:brightness-100"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>

    <div class="absolute inset-y-0 left-0 w-24 md:w-64 bg-gradient-to-r from-slate-950 via-slate-950/80 to-transparent z-10 pointer-events-none"></div>
    <div class="absolute inset-y-0 right-0 w-24 md:w-64 bg-gradient-to-l from-slate-950 via-slate-950/80 to-transparent z-10 pointer-events-none"></div>
  </div>
</section>

<style>
  /* Animasi ke Kiri */
  @keyframes marquee-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Animasi ke Kanan */
  @keyframes marquee-right {
    0% { transform: translateX(-50%); }
    100% { transform: translateX(0); }
  }

  .animate-marquee-left {
    animation: marquee-left 50s linear infinite;
  }

  .animate-marquee-right {
    animation: marquee-right 55s linear infinite;
  }

  /* Efek berhenti saat hover pada baris tersebut */
  .group:hover .animate-marquee-left,
  .group:hover .animate-marquee-right {
    animation-play-state: paused;
  }

  /* Responsivitas Kecepatan di Mobile */
  @media (max-width: 768px) {
    .animate-marquee-left { animation-duration: 30s; }
    .animate-marquee-right { animation-duration: 35s; }
  }
</style>