---
// src/components/sections/SpecializedServices.astro
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

const services = [
  {
    title: "SEO & CRO",
    desc: "Optimasi touchpoint untuk konversi maksimal secara berkelanjutan.",
    metric: "300%",
    label: "ROI Increase",
    color: "from-cyan-400 to-blue-500",
    icon: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
  },
  {
    title: "Buzzer Net",
    desc: "100K+ talenta penggerak opini publik secara real-time.",
    metric: "100K+",
    label: "Active Talents",
    color: "from-emerald-400 to-cyan-500",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7"
  },
  {
    title: "Viral Clipper",
    desc: "Dominasi FYP dengan konten yang terukur dan masif.",
    metric: "24/7",
    label: "Growth",
    color: "from-blue-500 to-indigo-600",
    icon: "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764"
  },
  {
    title: "Media Dist.",
    desc: "Publikasi masif di 10K+ jaringan media nasional terpercaya.",
    metric: "10K+",
    label: "Portals",
    color: "from-cyan-500 to-teal-400",
    icon: "M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10"
  }
];
---

<section class="relative py-24 bg-[#020617] overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff03_1px,transparent_1px),linear-gradient(to_bottom,#ffffff03_1px,transparent_1px)] bg-[size:60px_60px]"></div>
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-cyan-500/5 blur-[120px] rounded-full"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end mb-24 gap-12">
      <AnimateOnScroll animation="fade-up" class="max-w-3xl">
        <div class="inline-flex items-center gap-3 px-3 py-1.5 rounded-full border border-cyan-500/20 bg-cyan-500/5 text-[10px] font-black uppercase tracking-[0.3em] text-cyan-400 mb-8 shadow-sm">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"></span>
          </span>
          Our Capabilities
        </div>
        <h2 class="text-3xl lg:text-6xl font-black text-white leading-[0.85] tracking-tighter">
          Beyond <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-teal-400 to-cyan-400">Marketing.</span><br/>
          It's Dominance.
        </h2>
      </AnimateOnScroll>

      <AnimateOnScroll animation="fade-up" delay={200} class="max-w-xs border-l border-white/10 pl-8">
        <p class="text-slate-400 text-sm leading-relaxed mb-6">
          Kami tidak hanya mengikuti tren, kami menciptakannya melalui ekosistem digital terintegrasi yang memastikan brand Anda menguasai pasar.
        </p>
        <div class="flex items-center gap-4">
          <div class="flex -space-x-3">
            {[1,2,3,4].map(i => (
              <div class="w-8 h-8 rounded-full border-2 border-[#020617] bg-slate-800">
                <img src={`https://i.pravatar.cc/100?img=${i+10}`} alt="client" class="rounded-full grayscale" />
              </div>
            ))}
          </div>
          <div class="text-[10px] font-bold text-slate-500 uppercase leading-tight tracking-widest">
            Trusted by<br/><span class="text-white">500+ Top Brands</span>
          </div>
        </div>
      </AnimateOnScroll>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {services.map((service, index) => (
        <AnimateOnScroll animation="fade-up" delay={index * 100}>
          <div class="group relative h-full bg-slate-900/20 backdrop-blur-md border border-white/[0.05] rounded-2xl p-7 transition-all duration-500 hover:bg-slate-900/50 hover:border-cyan-500/30 hover:-translate-y-1">
            
            <div class="flex justify-between items-start mb-10">
              <div class={`p-2.5 rounded-xl bg-gradient-to-br ${service.color} shadow-lg shadow-cyan-500/10`}>
                <svg class="w-5 h-5 text-[#020617]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d={service.icon}></path>
                </svg>
              </div>
              <div class="text-right">
                <div class="text-2xl font-black tracking-tighter text-white group-hover:text-cyan-400 transition-colors">
                  {service.metric}
                </div>
                <div class="text-[8px] font-bold text-slate-500 uppercase tracking-widest">{service.label}</div>
              </div>
            </div>

            <div class="space-y-3">
              <h3 class="text-lg font-bold text-white tracking-tight">
                {service.title}
              </h3>
              <p class="text-slate-400 text-xs leading-relaxed group-hover:text-slate-300 transition-colors">
                {service.desc}
              </p>
            </div>

            <div class={`absolute bottom-0 left-0 h-[2px] w-0 bg-gradient-to-r ${service.color} transition-all duration-500 group-hover:w-full opacity-60`}></div>
          </div>
        </AnimateOnScroll>
      ))}
    </div>
  </div>
</section>

<style>
  section {
    font-family: 'Plus Jakarta Sans', sans-serif;
  }
</style>