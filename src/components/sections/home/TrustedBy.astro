---
// src/components/sections/TrustedBy.astro
// Trusted By Section - Logo Cloud Social Proof
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  currentLang: 'id' | 'en';
}

const { currentLang: lang } = Astro.props;

const data = {
  id: {
    title: "Dipercaya oleh",
    titleHighlight: "500+ Brand",
    subtitle: "Kami telah membantu brand dari berbagai industri mencapai social media success"
  },
  en: {
    title: "Trusted by",
    titleHighlight: "500+ Brands",
    subtitle: "We've helped brands across industries achieve social media success"
  }
};

const content = data[lang];

// Client logos - menggunakan text/icon untuk sekarang, bisa diganti image logo asli nanti
const clients = [
  { name: "Unilever", category: "FMCG", icon: "ğŸ›’" },
  { name: "Suzuki", category: "Automotive", icon: "ğŸš—" },
  { name: "Bank BRI", category: "Banking", icon: "ğŸ¦" },
  { name: "Telkom", category: "Telecommunications", icon: "ğŸ“¡" },
  { name: "Pertamina", category: "Energy", icon: "âš¡" },
  { name: "Indomie", category: "FMCG", icon: "ğŸœ" },
  { name: "Gojek", category: "Technology", icon: "ğŸ›µ" },
  { name: "Tokopedia", category: "E-commerce", icon: "ğŸ›ï¸" }
];
---

<section class="relative py-16 md:py-20 bg-slate-950 border-t border-white/5 overflow-hidden">
  <!-- Subtle Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-[300px] h-[300px] bg-cyan-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-[300px] h-[300px] bg-teal-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
      <div class="text-center mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">
          {content.title} <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-teal-400">{content.titleHighlight}</span>
        </h2>
        <p class="text-base md:text-lg text-gray-400 max-w-2xl mx-auto">
          {content.subtitle}
        </p>
      </div>
    </AnimateOnScroll>

    <!-- Logo Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-8 md:gap-12">
      {clients.map((client, index) => (
        <AnimateOnScroll
          key={client.name}
          animation="fade-up"
          delay={index * 100}
          duration={700}
          class="group flex flex-col items-center justify-center p-6 rounded-2xl bg-white/5 border border-white/10 hover:border-cyan-500/30 hover:bg-white/10 transition-all duration-300"
        >
          <!-- Client Icon/Logo Placeholder -->
          <div class="text-5xl md:text-6xl mb-3 transform group-hover:scale-110 transition-transform duration-300">
            {client.icon}
          </div>

          <!-- Client Name -->
          <h3 class="text-sm md:text-base font-bold text-white text-center group-hover:text-cyan-400 transition-colors duration-300">
            {client.name}
          </h3>

          <!-- Category Badge -->
          <span class="mt-2 text-[10px] md:text-xs font-semibold text-gray-500 uppercase tracking-wider">
            {client.category}
          </span>
        </AnimateOnScroll>
      ))}
    </div>

    <!-- Bottom CTA -->
    <AnimateOnScroll animation="fade-up" delay={800} duration={700}>
      <div class="mt-12 text-center">
        <a
          href={lang === 'id' ? '/klien' : '/clients'}
          class="inline-flex items-center gap-2 text-sm font-semibold text-gray-400 hover:text-cyan-400 transition-colors duration-300 group"
        >
          <span>{lang === 'id' ? 'Lihat Semua Klien' : 'View All Clients'}</span>
          <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </AnimateOnScroll>
  </div>
</section>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    animation: fade-up 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
