---
// src/components/sections/ContactHero.astro
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  locale: 'id' | 'en';
  badge: string;
  title: string;
  subtitle: string;
  description: string;
  cta: {
    text: string;
    href: string;
  };
}

const { locale, badge, title, subtitle, description, cta } = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-[#020617]" id="hero">
  
  <div class="absolute inset-0 pointer-events-none overflow-hidden layer-slow">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#1e293b_1px,transparent_1px),linear-gradient(to_bottom,#1e293b_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-20"></div>
    
    <div class="absolute top-[-10%] left-[-10%] w-[50vw] h-[50vw] bg-cyan-950/40 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40vw] h-[40vw] bg-teal-950/30 rounded-full blur-[120px]"></div>
  </div>

  <div class="absolute inset-0 pointer-events-none overflow-hidden z-20 hidden md:block">
    <div class="absolute top-[20%] left-[10%] w-32 h-32 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-md shadow-2xl parallax-item" data-speed="40">
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-transparent rounded-3xl"></div>
    </div>

    <div class="absolute bottom-[25%] right-[15%] w-40 h-40 rounded-full bg-gradient-to-tr from-teal-500/10 to-white/5 border border-white/10 backdrop-blur-xl shadow-2xl parallax-item" data-speed="-30"></div>

    <div class="absolute top-[15%] right-[25%] w-24 h-24 rounded-full border-[12px] border-cyan-500/10 parallax-item" data-speed="20"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-12 relative z-10 py-32">
    <div class="max-w-5xl mx-auto text-center">
      
      <AnimateOnScroll animation="fade-down" delay={100}>
        <div class="inline-flex items-center gap-3 px-6 py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/30 backdrop-blur-md mb-10 group transition-all duration-500 hover:border-cyan-400/50">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-cyan-500 shadow-[0_0_10px_#22d3ee]"></span>
          </span>
          <span class="text-[11px] font-black text-cyan-400 uppercase tracking-[0.3em]">{badge}</span>
        </div>
      </AnimateOnScroll>

      <AnimateOnScroll animation="fade-up" delay={300}>
        <h1 class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-black text-white leading-[0.9] tracking-tighter mb-6 sm:mb-8 perspective-text">
          {title} <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-teal-300 to-cyan-500 italic">
            {subtitle}
          </span>
        </h1>
      </AnimateOnScroll>

      <AnimateOnScroll animation="fade-up" delay={500}>
        <p class="text-lg sm:text-xl md:text-2xl text-slate-400 font-medium leading-relaxed max-w-2xl mx-auto mb-10 sm:mb-14 px-4 sm:px-0">
          {description}
        </p>
      </AnimateOnScroll>

      <AnimateOnScroll animation="fade-up" delay={700}>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 md:gap-8">
          <a
            href={cta.href}
            class="magnetic-btn group relative inline-flex items-center gap-3 sm:gap-4 md:gap-5 px-8 sm:px-12 md:px-14 py-4 sm:py-5 md:py-6 bg-white text-slate-950 font-black text-base sm:text-lg md:text-xl rounded-2xl transition-transform duration-300 hover:scale-105"
          >
            <span class="relative z-10 uppercase tracking-tighter">{cta.text}</span>
            <div class="p-1 bg-slate-950 rounded-full group-hover:bg-cyan-500 transition-colors duration-300">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white transform -rotate-45 group-hover:rotate-0 transition-transform duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </div>
          </a>
        </div>
      </AnimateOnScroll>

      <div class="grid grid-cols-3 gap-3 sm:gap-4 max-w-3xl mx-auto mt-16 sm:mt-20 md:mt-24 pt-12 sm:pt-14 md:pt-16 border-t border-white/5 opacity-80">
        {[
          { val: '500+', label: locale === 'id' ? 'Proyek' : 'Projects' },
          { val: '98%', label: locale === 'id' ? 'Kepuasan' : 'Success' },
          { val: '24/7', label: 'Support' }
        ].map(stat => (
          <div class="group cursor-default">
            <div class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black text-white group-hover:text-cyan-400 transition-colors duration-300">{stat.val}</div>
            <div class="text-[8px] sm:text-[9px] font-bold text-slate-600 uppercase tracking-[0.3em] sm:tracking-[0.4em] mt-1 sm:mt-2">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-4 z-30">
    <div class="w-[1px] h-16 bg-gradient-to-b from-cyan-500 to-transparent relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-1/2 bg-white animate-scroll-pill"></div>
    </div>
  </div>
</section>

<style>
  /* Base Styles */
  .perspective-text {
    perspective: 1000px;
    text-shadow: 0 20px 50px rgba(0,0,0,0.5);
  }

  /* Scroll Animation */
  @keyframes scroll-pill {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(200%); }
  }
  .animate-scroll-pill {
    animation: scroll-pill 2.5s cubic-bezier(0.7, 0, 0.3, 1) infinite;
  }

  /* Noise Overlay */
  section::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
    z-index: 1;
  }

  /* Parallax Initial Transition */
  .parallax-item {
    transition: transform 0.2s cubic-bezier(0.2, 0, 0.2, 1);
  }
</style>

<script>
  // Advanced Parallax Effect - Only on Desktop
  if (window.innerWidth >= 768) {
    document.addEventListener('mousemove', (e) => {
      const { clientX, clientY } = e;
      const centerX = window.innerWidth / 2;
      const centerY = window.innerHeight / 2;

      // Move Parallax Items
      const items = document.querySelectorAll('.parallax-item');
      items.forEach((item) => {
        const speed = parseFloat(item.getAttribute('data-speed') || '20');
        const x = (centerX - clientX) / speed;
        const y = (centerY - clientY) / speed;
        (item as HTMLElement).style.transform = `translate3d(${x}px, ${y}px, 0) rotateX(${y * 0.1}deg) rotateY(${x * 0.1}deg)`;
      });

      // Suble Background Movement
      const bg = document.querySelector('.layer-slow') as HTMLElement;
      if (bg) {
          const x = (centerX - clientX) / 100;
          const y = (centerY - clientY) / 100;
          bg.style.transform = `translate(${x}px, ${y}px)`;
      }
    });

    // Magnetic Button Logic - Only on Desktop
    const btn = document.querySelector('.magnetic-btn');
    if (btn) {
      btn.addEventListener('mousemove', (e: any) => {
        const rect = btn.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        (btn as HTMLElement).style.transform = `translate(${x * 0.3}px, ${y * 0.5}px)`;
      });
      btn.addEventListener('mouseleave', () => {
        (btn as HTMLElement).style.transform = `translate(0, 0)`;
      });
    }
  }
</script>