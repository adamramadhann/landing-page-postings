---
// src/components/sections/HeroSection.astro
import AnimateOnScroll from '../ui/AnimateOnScroll.astro';

interface Props {
  currentLang: 'id' | 'en';
}

const { currentLang: lang } = Astro.props;

const heroData = {
  id: {
    badge: "Social Commerce Solution",
    title: "Ubah Interaksi Menjadi Transaksi",
    description: "Platform all-in-one untuk mengelola, mengukur, dan mengoptimalkan strategi social commerce Anda di seluruh jaringan media sosial global.",
    cta: { primary: "Mulai Sekarang", secondary: "Lihat Demo" }
  },
  en: {
    badge: "Social Commerce Solution",
    title: "Turn Social Connections into Commerce",
    description: "An all-in-one platform to manage, measure, and optimize your social commerce strategy across global social networks.",
    cta: { primary: "Get Started", secondary: "View Demo" }
  }
};

const data = heroData[lang];

// Gambar Placeholder Berkualitas (Ganti dengan aset lokal Anda nanti)
const productImg = "https://images.unsplash.com/photo-1583511655857-d19b40a7a54e?q=80&w=1000&auto=format&fit=crop";
const userAvatar = "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=100&auto=format&fit=crop";
---

<section class="relative min-h-[90dvh] lg:min-h-screen flex items-center overflow-hidden bg-[#f8f9fb] dark:bg-slate-950">
  
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -right-[10%] top-[10%] w-[700px] h-[700px] bg-emerald-100/50 dark:bg-emerald-900/20 rounded-full blur-[100px]"></div>
    <div class="absolute left-[5%] bottom-[10%] w-[400px] h-[400px] bg-blue-100/40 dark:bg-blue-900/10 rounded-full blur-[80px]"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] border border-slate-200/50 dark:border-slate-800/30 rounded-full animate-[spin_60s_linear_infinite]"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center">

      <div class="max-w-2xl space-y-8">
        <AnimateOnScroll animation="fade-up" delay={0}>
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-100 dark:border-emerald-800/50 text-emerald-700 dark:text-emerald-400 text-sm font-bold shadow-sm">
            <span class="flex h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
            {data.badge}
          </div>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={100}>
          <h1 class="text-5xl lg:text-7xl font-black text-slate-900 dark:text-white leading-[1.1] tracking-tight">
            {data.title.split(' ').map((word, i) => 
              i === 2 ? <span class="text-emerald-600 dark:text-emerald-500 block lg:inline">{word} </span> : word + ' '
            )}
          </h1>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={200}>
          <p class="text-xl text-slate-600 dark:text-slate-400 leading-relaxed max-w-lg">
            {data.description}
          </p>
        </AnimateOnScroll>

        <AnimateOnScroll animation="fade-up" delay={300}>
          <div class="flex flex-wrap gap-4">
            <a href="#" class="px-8 py-4 bg-emerald-600 hover:bg-emerald-700 text-white font-bold rounded-2xl transition-all shadow-xl shadow-emerald-200 dark:shadow-none hover:-translate-y-1 active:scale-95">
              {data.cta.primary}
            </a>
            <a href="#" class="px-8 py-4 bg-white dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-800 text-slate-700 dark:text-slate-200 font-bold rounded-2xl hover:bg-slate-50 dark:hover:bg-slate-800 transition-all">
              {data.cta.secondary}
            </a>
          </div>
        </AnimateOnScroll>
      </div>

      <div class="relative h-[650px] w-full flex items-center justify-center">
        
        <svg class="absolute inset-0 w-full h-full opacity-30 dark:opacity-20" viewBox="0 0 600 600">
          <path class="animate-draw" d="M150 300 Q 300 100 450 300 T 300 500" stroke="#10b981" stroke-width="1.5" fill="none" stroke-dasharray="8 8" />
          <circle cx="300" cy="300" r="220" stroke="#cbd5e1" stroke-width="1" fill="none" stroke-dasharray="4 4" />
        </svg>

        <div class="relative z-30 w-[320px] bg-white dark:bg-slate-900 rounded-[2.5rem] shadow-[0_50px_100px_-20px_rgba(0,0,0,0.15)] border border-slate-100 dark:border-slate-800 p-4 animate-float">
          <div class="flex items-center justify-between mb-4 px-2">
            <div class="flex items-center gap-2">
              <img src={userAvatar} alt="User" class="w-8 h-8 rounded-full border border-emerald-500 p-0.5" />
              <div class="flex flex-col">
                <span class="text-[11px] font-black dark:text-white leading-none">paws_studio</span>
                <span class="text-[9px] text-slate-400 font-bold">New York, USA</span>
              </div>
            </div>
            <svg class="w-5 h-5 text-slate-300" fill="currentColor" viewBox="0 0 20 20"><path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"/></svg>
          </div>
          
          <div class="aspect-square rounded-3xl mb-4 overflow-hidden relative group">
            <img src={productImg} alt="Product" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            <div class="absolute bottom-4 left-4 right-4 py-2.5 bg-white/90 backdrop-blur shadow-xl rounded-xl flex items-center justify-center gap-2 border border-emerald-500/20">
              <span class="text-emerald-600 text-[10px] font-black uppercase tracking-wider">Shop Product</span>
              <svg class="w-3 h-3 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </div>
          </div>
          
          <div class="px-2 flex items-center justify-between">
            <div class="flex gap-4">
               <svg class="w-6 h-6 text-slate-700 dark:text-slate-300 hover:text-red-500 cursor-pointer transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path></svg>
               <svg class="w-6 h-6 text-slate-700 dark:text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
            </div>
            <div class="flex -space-x-2">
               {[1,2,3].map(() => <div class="w-5 h-5 rounded-full border-2 border-white dark:border-slate-900 bg-slate-200"></div>)}
            </div>
          </div>
        </div>

        <div class="absolute top-[8%] right-0 z-40 bg-white/95 dark:bg-slate-800/95 backdrop-blur-xl p-4 rounded-2xl shadow-2xl border border-emerald-100 dark:border-emerald-500/20 animate-float [animation-delay:1s]">
          <div class="flex items-center gap-3">
             <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
             </div>
             <div>
                <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest leading-none mb-1">Engagements</p>
                <p class="text-base font-black dark:text-white leading-none">+124.5%</p>
             </div>
          </div>
        </div>

        <div class="absolute bottom-[8%] right-[5%] z-40 bg-white dark:bg-slate-900 p-5 rounded-3xl shadow-2xl border border-slate-100 dark:border-slate-800 w-52 animate-bounce-slow">
           <div class="flex justify-between items-center mb-4">
              <span class="text-[10px] font-black uppercase dark:text-white">Conversions</span>
              <span class="text-[10px] font-bold text-emerald-500">Weekly</span>
           </div>
           <div class="flex items-end gap-2 h-20">
              <div class="flex-1 bg-slate-100 dark:bg-slate-800 rounded-lg h-[40%] transition-all hover:bg-emerald-500"></div>
              <div class="flex-1 bg-slate-100 dark:bg-slate-800 rounded-lg h-[70%] transition-all hover:bg-emerald-500"></div>
              <div class="flex-1 bg-emerald-500 rounded-lg h-[100%]"></div>
              <div class="flex-1 bg-slate-100 dark:bg-slate-800 rounded-lg h-[60%] transition-all hover:bg-emerald-500"></div>
              <div class="flex-1 bg-slate-100 dark:bg-slate-800 rounded-lg h-[85%] transition-all hover:bg-emerald-500"></div>
           </div>
        </div>

        <div class="absolute bottom-[15%] left-[-2%] z-40 bg-slate-900 dark:bg-emerald-600 text-white p-4 rounded-2xl shadow-2xl animate-float [animation-delay:1.5s]">
           <div class="flex items-center gap-3">
              <div class="w-8 h-8 rounded-lg bg-white/20 flex items-center justify-center">
                 <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
              </div>
              <div>
                 <p class="text-[8px] font-bold opacity-80 uppercase leading-none mb-1">Recent Sale</p>
                 <p class="text-sm font-black">$285.00</p>
              </div>
           </div>
        </div>

        <div class="absolute top-[20%] left-[5%] z-40 bg-white dark:bg-slate-800 py-2.5 px-4 rounded-full shadow-xl border border-slate-100 dark:border-slate-700 flex items-center gap-2 animate-bounce-slow">
           <div class="w-2 h-2 rounded-full bg-purple-500 animate-ping"></div>
           <span class="text-[10px] font-black dark:text-white uppercase tracking-tighter">Live Campaign</span>
        </div>

      </div>

    </div>
  </div>
</section>

<style>
  /* KEYFRAMES */
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(1deg); }
  }

  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce-slow 5s ease-in-out infinite;
  }

  .animate-draw {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: draw 4s ease-out forwards infinite;
  }

  @keyframes draw {
    0% { stroke-dashoffset: 1000; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -1000; }
  }

  @media (max-width: 1024px) {
    .grid { grid-template-columns: 1fr; text-align: center; }
    .max-w-2xl { margin: 0 auto; }
    .flex-wrap { justify-content: center; }
    .h-\[650px\] { height: 500px; transform: scale(0.8); }
  }
</style>