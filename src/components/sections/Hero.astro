---
// src/components/sections/Hero.astro
interface Props {
  locale: 'id' | 'en';
  data: {
    badge: string;
    title: string;
    subtitle: string;
    cta: string;
  };
  contactUrl: string;
}

const { locale, data, contactUrl } = Astro.props;

// Assets
const personImg = "https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=500&auto=format&fit=crop";
const productImg = "https://images.unsplash.com/photo-1523275335684-37898b6baf30?q=80&w=500&auto=format&fit=crop";
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-slate-950" id="hero">
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-cyan-950/40 animate-gradient-shift"></div>
  <div class="absolute inset-0 opacity-[0.05] bg-[linear-gradient(to_right,#0891b2_1px,transparent_1px),linear-gradient(to_bottom,#0891b2_1px,transparent_1px)] bg-[size:40px_40px]"></div>

  <div class="absolute inset-0 overflow-hidden pointer-events-none" id="hero-orbs">
    <div class="absolute top-[-10%] right-[-10%] w-[600px] h-[600px] bg-cyan-500/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[-10%] left-[-10%] w-[400px] h-[400px] bg-emerald-500/10 rounded-full blur-[100px]"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-12 relative z-10 py-24">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      
      <div class="space-y-8">
        <div class="hero-reveal inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 backdrop-blur-md border border-white/10 shadow-2xl">
          <span class="flex h-2 w-2 rounded-full bg-cyan-400 animate-pulse"></span>
          <span class="text-xs font-black tracking-widest text-cyan-100 uppercase">{data.badge}</span>
        </div>

        <h1 class="hero-title text-5xl lg:text-7xl font-black text-white leading-[1.1] tracking-tight">
          {data.title.split(' ').map((word, i) => 
            i === (data.title.split(' ').length - 1) ? 
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-emerald-400">{word}</span> : word + ' '
          )}
        </h1>

        <p class="hero-subtitle text-xl text-gray-400 leading-relaxed max-w-xl">
          {data.subtitle}
        </p>

        <div class="hero-cta flex flex-wrap gap-5">
          <a href={contactUrl} class="group relative px-8 py-4 bg-cyan-600 text-white font-bold rounded-2xl transition-all shadow-xl shadow-cyan-900/20 hover:-translate-y-1 overflow-hidden">
            <span class="relative z-10">{data.cta}</span>
            <div class="absolute inset-0 -translate-x-full group-hover:animate-shimmer bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
          </a>
          <button class="px-8 py-4 bg-white/5 border border-white/10 text-white font-bold rounded-2xl hover:bg-white/10 transition-all">
            {locale === 'id' ? 'Pelajari Lebih Lanjut' : 'Learn More'}
          </button>
        </div>
      </div>

      <div class="relative h-[650px] flex items-center justify-center">
        
        <div class="absolute w-72 h-72 bg-cyan-500/20 rounded-full blur-[80px] animate-pulse"></div>

        <div class="relative z-20 w-[340px] bg-slate-900/80 backdrop-blur-3xl rounded-[2.5rem] border border-white/10 shadow-[0_32px_64px_-15px_rgba(0,0,0,0.5)] p-5 animate-float-slow">
           <div class="flex items-center gap-3 mb-5 px-1">
              <img src={personImg} class="w-10 h-10 rounded-full object-cover border-2 border-cyan-500/50" alt="Avatar" />
              <div>
                <p class="text-sm font-bold text-white leading-none">Alex Rivera</p>
                <p class="text-[10px] text-gray-400">@rivera_studio</p>
              </div>
              <div class="ml-auto w-8 h-8 rounded-full bg-white/5 flex items-center justify-center">
                <div class="flex gap-0.5">
                  <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
                  <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
                  <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
                </div>
              </div>
           </div>

           <div class="aspect-[4/5] rounded-[1.8rem] overflow-hidden mb-5 relative group">
              <img src={productImg} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="Work" />
              <div class="absolute bottom-4 left-4 right-4 p-3 bg-black/40 backdrop-blur-md border border-white/10 rounded-xl flex items-center justify-between">
                <span class="text-[10px] font-bold text-white uppercase tracking-widest">View Analytics</span>
                <svg class="w-4 h-4 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
              </div>
           </div>

           <div class="flex items-center justify-between px-1">
              <div class="flex gap-4">
                <span class="text-xl">ðŸ”¥</span>
                <span class="text-xl">ðŸ’¬</span>
                <span class="text-xl">ðŸš€</span>
              </div>
              <div class="h-1.5 w-12 bg-white/10 rounded-full"></div>
           </div>
        </div>

        <div class="absolute top-[10%] -right-8 z-30 bg-white/95 backdrop-blur-xl p-4 rounded-2xl shadow-2xl animate-bounce-slow">
           <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-emerald-500 flex items-center justify-center shadow-lg shadow-emerald-500/30">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 10l7-7m0 0l7 7m-7-7v18"/></svg>
              </div>
              <div>
                <p class="text-[9px] font-black text-gray-400 uppercase tracking-tighter">Daily Revenue</p>
                <p class="text-lg font-black text-slate-900 leading-none">$2,450.00</p>
              </div>
           </div>
        </div>

        <div class="absolute bottom-[15%] -left-12 z-30 bg-slate-900/90 backdrop-blur-xl border border-white/10 p-5 rounded-3xl shadow-2xl animate-float-slow" style="animation-delay: -3s">
           <p class="text-[10px] font-bold text-gray-400 uppercase mb-3">Live Interactions</p>
           <div class="flex items-end gap-1.5 h-12">
              <div class="w-2 bg-cyan-500/30 rounded-full h-[40%]"></div>
              <div class="w-2 bg-cyan-500/50 rounded-full h-[70%]"></div>
              <div class="w-2 bg-cyan-500 rounded-full h-[100%] animate-pulse"></div>
              <div class="w-2 bg-cyan-500/40 rounded-full h-[60%]"></div>
              <div class="w-2 bg-cyan-500/20 rounded-full h-[85%]"></div>
           </div>
        </div>

        <div class="absolute top-[25%] -left-6 z-10 bg-emerald-500/10 backdrop-blur-md border border-emerald-500/20 px-4 py-2 rounded-full animate-float-slow" style="animation-delay: -1s">
           <div class="flex items-center gap-2">
              <div class="w-1.5 h-1.5 bg-emerald-500 rounded-full animate-ping"></div>
              <span class="text-[10px] font-bold text-emerald-400 uppercase tracking-widest">Optimized</span>
           </div>
        </div>

      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  @keyframes float-slow {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-20px) scale(1.02); }
  }
  @keyframes bounce-slow {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-15px) scale(1.05); }
  }
  @keyframes shimmer {
    100% { transform: translateX(100%); }
  }
  @keyframes reveal-up {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-gradient-shift { background-size: 200% 200%; animation: gradient-shift 12s ease infinite; }
  .animate-float-slow { animation: float-slow 6s ease-in-out infinite; }
  .animate-bounce-slow { animation: bounce-slow 4s ease-in-out infinite; }
  .animate-shimmer { animation: shimmer 2s infinite; }

  .hero-reveal { opacity: 0; animation: reveal-up 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.2s; }
  .hero-title { opacity: 0; animation: reveal-up 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s; }
  .hero-subtitle { opacity: 0; animation: reveal-up 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.6s; }
  .hero-cta { opacity: 0; animation: reveal-up 1s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.8s; }
</style>

<script>
  // Mouse movement parallax for the Right UI
  document.addEventListener('mousemove', (e) => {
    const cards = document.querySelectorAll('.relative.z-20, .absolute.z-30');
    const x = (e.clientX / window.innerWidth - 0.5) * 30;
    const y = (e.clientY / window.innerHeight - 0.5) * 30;
    
    cards.forEach((card, index) => {
      const depth = (index + 1) * 0.5;
      (card as HTMLElement).style.transform = `translate(${x * depth}px, ${y * depth}px)`;
    });
  });
</script>