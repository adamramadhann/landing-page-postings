---

<section class="relative py-32 bg-slate-950 overflow-hidden">
  <!-- Dot Grid Pattern -->
  <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

  <!-- Gradient Orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[1000px] bg-gradient-to-br from-cyan-500/8 via-teal-500/5 to-transparent"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-24">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-cyan-500/10 border border-cyan-500/20 mb-6">
        <span class="w-2 h-2 rounded-full bg-cyan-400 animate-pulse"></span>
        <span class="text-[10px] font-bold text-cyan-400 uppercase tracking-[0.2em]">Our Ecosystem</span>
      </div>
      <h2 class="text-5xl md:text-7xl font-black text-white mb-6 tracking-tight italic">
        {data.pillars.title}
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed font-medium">
        {data.pillars.subtitle}
      </p>
    </div>

    <div class="space-y-40">
      {data.pillars.roles.map((role, index) => (
        <div class="group">
          <div class={`flex flex-col lg:flex-row gap-16 items-center ${index % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
            
            <div class="w-full lg:w-1/2 relative group/img">
  <div class="absolute -inset-6 bg-gradient-to-tr from-cyan-500/10 to-teal-500/10 blur-3xl rounded-[4rem] opacity-50"></div>

  <div class="relative aspect-[4/5] md:aspect-video lg:aspect-square rounded-[3rem] overflow-hidden border border-white/10 shadow-2xl transition-all duration-700">

    <img
      src={role.bgImage}
      alt={role.title}
      class="w-full h-full object-cover grayscale-[0.3] contrast-[1.1] group-hover/img:grayscale-0 group-hover/img:scale-110 transition-all duration-1000 ease-out"
    />

    <div class="absolute inset-0 bg-gradient-to-t from-slate-900/95 via-slate-900/40 to-transparent opacity-90"></div>

    <div class="absolute bottom-8 left-8 right-8">
      <div class="backdrop-blur-xl bg-slate-900/90 border border-white/20 rounded-[2rem] p-5 shadow-2xl flex justify-between items-center group-hover/img:shadow-cyan-500/20 transition-all duration-500">
        <div class="flex gap-8 pl-2">
          {role.stats.slice(0, 2).map(stat => (
            <div class="relative">
              <div class="text-2xl font-black text-white tracking-tighter leading-none">{stat.value}</div>
              <div class="text-[9px] font-bold text-gray-400 uppercase tracking-[0.15em] mt-1.5">{stat.label}</div>
            </div>
          ))}
        </div>

        <div class={`w-12 h-12 rounded-2xl bg-gradient-to-r from-cyan-600 to-teal-600 text-white flex items-center justify-center shadow-lg group-hover/img:from-cyan-500 group-hover/img:to-teal-500 transition-all duration-500`}>
          <Fragment set:html={getIcon(role.id)} />
        </div>
      </div>
    </div>

    <div class="absolute top-8 left-8">
      <div class="bg-cyan-500/20 backdrop-blur-md border border-cyan-500/30 px-4 py-2 rounded-full">
        <span class="text-white text-[10px] font-black tracking-[0.2em] uppercase">Pillar 0{index + 1}</span>
      </div>
    </div>

  </div>
</div>

            <div class="w-full lg:w-1/2 space-y-8">
              <div class="space-y-4">
                <div class="text-cyan-400 font-bold tracking-widest uppercase text-xs">0{index + 1} â€” {role.subtitle}</div>
                <h3 class="text-4xl md:text-5xl font-black text-white leading-none">
                  {role.title}
                </h3>
                <p class="text-lg text-gray-400 leading-relaxed font-medium">
                  {role.description}
                </p>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {role.benefits.map((benefit) => (
                  <div class="flex items-center gap-3 p-4 rounded-2xl bg-slate-900/60 border border-white/10 group-hover:bg-slate-900/80 group-hover:border-cyan-500/30 transition-all duration-300">
                    <div class="w-2 h-2 rounded-full bg-cyan-400"></div>
                    <span class="text-sm font-bold text-gray-300">{benefit}</span>
                  </div>
                ))}
              </div>

              <div class="pt-4">
                <a href={'/id/contact'} class="inline-flex items-center gap-4 group/btn">
                  <span class="w-14 h-14 rounded-full bg-gradient-to-r from-cyan-600 to-teal-600 text-white flex items-center justify-center group-hover/btn:scale-110 group-hover/btn:from-cyan-700 group-hover/btn:to-teal-700 transition-all duration-300">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                  </span>
                  <span class="text-lg font-black text-white uppercase tracking-wider">Bergabung</span>
                </a>
              </div>
            </div>

          </div>
        </div>
      ))}
    </div>
  </div>
