const data = metricsData[lang];
---

<section class="relative py-16 md:py-20 lg:py-24 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800 overflow-hidden">
  {/* Background Elements - CYAN/TEAL CONSISTENT */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {/* Gradient Orbs - Cyan/Teal Only */}
    <div class="absolute top-20 right-20 w-[400px] h-[400px] bg-cyan-500/5 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 left-20 w-[350px] h-[350px] bg-teal-500/5 rounded-full blur-3xl animate-float" style="animation-delay: 2s"></div>

    {/* Grid Pattern */}
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05]">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#0891b2_1px,transparent_1px),linear-gradient(to_bottom,#0891b2_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {/* Section Header */}
    <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
      <div class="text-center mb-16 md:mb-20">
        <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 bg-cyan-50 dark:bg-cyan-950/20 border border-cyan-200 dark:border-cyan-800 rounded-full">
          <span class="w-2 h-2 rounded-full bg-cyan-500 animate-pulse"></span>
          <span class="text-xs font-bold tracking-[0.2em] text-cyan-600 dark:text-cyan-400 uppercase">Trusted by Industry Leaders</span>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 dark:text-white mb-6 tracking-tight">
          {data.title}
        </h2>

        <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          {data.subtitle}
        </p>
      </div>
    </AnimateOnScroll>

    {/* Metrics Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {data.metrics.map((metric, index) => (
        <AnimateOnScroll
          key={metric.label}
          animation="fade-up"
          delay={index * 100}
          duration={700}
          class="group relative bg-white dark:bg-gray-800 rounded-[2rem] p-6 md:p-8 border border-gray-200 dark:border-gray-700 hover:border-cyan-500/50 transition-all duration-500 hover:shadow-2xl"
        >
          {/* Gradient Overlay on Hover - Cyan/Teal Only */}
          <div class="absolute inset-0 rounded-[2rem] bg-gradient-to-br from-cyan-500/5 via-transparent to-teal-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <div class="relative z-10">
            {/* Icon - Cyan/Teal Only */}
            <div class="w-14 h-14 sm:w-16 sm:h-16 rounded-2xl bg-gradient-to-br from-cyan-500 to-teal-500 flex items-center justify-center text-2xl sm:text-3xl mb-6 shadow-lg group-hover:scale-110 transition-transform duration-300">
              {metric.icon}
            </div>

            {/* Value - Cyan/Teal Only */}
            <div class="mb-4">
              <div class="text-4xl sm:text-5xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-teal-500 leading-none mb-2">
                {metric.value}
              </div>
              <div class="h-1 w-16 bg-gradient-to-r from-cyan-500 to-teal-500 rounded-full"></div>
            </div>

            {/* Label */}
            <h3 class="text-lg md:text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-cyan-600 dark:group-hover:text-cyan-400 transition-colors duration-300">
              {metric.label}
            </h3>

            {/* Description */}
            <p class="text-sm md:text-base text-gray-600 dark:text-gray-400 leading-relaxed">
              {metric.description}
            </p>
          </div>
        </div>
      </AnimateOnScroll>
      ))}
    </div>

    {/* Bottom CTA - Cyan/Teal Only */}
    <AnimateOnScroll animation="fade-up" delay={600} duration={700}>
      <div class="mt-16 md:mt-20 text-center">
      <p class="text-base md:text-lg text-gray-600 dark:text-gray-400 mb-6">
        {lang === 'id' ? 'Siap mencapai hasil serupa untuk bisnis Anda?' : 'Ready to achieve similar results for your business?'}
      </p>
      <a
        href={lang === 'en' ? '/en/contact' : '/kontak'}
        class="inline-flex items-center gap-3 px-8 py-4 sm:px-10 sm:py-5 bg-gradient-to-r from-cyan-500 to-teal-500 text-white font-bold text-base sm:text-lg rounded-2xl shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300"
      >
        {lang === 'id' ? 'Mulai Sekarang' : 'Get Started'}
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </AnimateOnScroll>
  </div>
</section>

