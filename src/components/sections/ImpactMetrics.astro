}

const { currentLang: lang } = Astro.props;

const metricsData = {
  id: {
    title: 'Trusted by Industry Leaders',
    subtitle: 'We\'ve helped 500+ brands achieve their social media goals',
    metrics: [
      {
        value: '500+',
        label: 'Projects Completed',
        description: 'Successful campaigns delivered across various industries',
        icon: 'üìä'
      },
      {
        value: '98%',
        label: 'Client Satisfaction',
        description: 'Client satisfaction rate with ongoing partnerships',
        icon: '‚≠ê'
      },
      {
        value: '150M+',
        label: 'Reach Generated',
        description: 'Total reach from all our social media campaigns',
        icon: 'üåê'
      },
      {
        value: '12M+',
        label: 'Engagements Driven',
        description: 'Meaningful interactions across all social platforms',
        icon: 'üí¨'
      }
    ]
  },
  en: {
    title: 'Trusted by Industry Leaders',
    subtitle: 'We\'ve helped 500+ brands achieve their social media goals',
    metrics: [
      {
        value: '500+',
        label: 'Projects Completed',
        description: 'Successful campaigns delivered across various industries',
        icon: 'üìä'
      },
      {
        value: '98%',
        label: 'Client Satisfaction',
        description: 'Client satisfaction rate with ongoing partnerships',
        icon: '‚≠ê'
      },
      {
        value: '150M+',
        label: 'Reach Generated',
        description: 'Total reach from all our social media campaigns',
        icon: 'üåê'
      },
      {
        value: '12M+',
        label: 'Engagements Driven',
        description: 'Meaningful interactions across all social platforms',
        icon: 'üí¨'
      }
    ]
  }
