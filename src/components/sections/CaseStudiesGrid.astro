---
// src/components/sections/CaseStudiesGrid.astro
import AnimateOnScroll from '../ui/AnimateOnScroll.astro';

interface Props {
  locale: 'id' | 'en';
  title: string;
  subtitle: string;
  caseStudies: Array<{
    id: string;
    brand: string;
    product: string;
    logo: string;
    category: string;
    industry: string;
    year: string;
    image: string;
    featured: boolean;
    color: string;
    tags: string[];
    challenge: { id: string; en: string };
    solution: { id: string; en: string };
    results: Array<{
      metric: string;
      label: { id: string; en: string };
    }>;
    testimonial?: { id: string; en: string };
  }>;
  industries: string[];
}

const { locale, title, subtitle, caseStudies, industries } = Astro.props;

const t = {
  id: {
    filter: 'Saring Industri:',
    all: 'Semua Proyek',
    challenge: 'Tantangan',
    viewDetails: 'Explore Case Study'
  },
  en: {
    filter: 'Filter Industry:',
    all: 'All Projects',
    challenge: 'Challenge',
    viewDetails: 'Explore Case Study'
  }
};

const data = t[locale];
---

<section class="relative py-24 bg-white overflow-hidden" id="case-studies">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mb-16">
      <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-white shadow-2xl border border-cyan-200/50 backdrop-blur-sm mb-8">
            <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-500 to-teal-500 animate-pulse"></span>
            <span class="text-sm font-bold text-gray-900 uppercase tracking-wider">Case Studies</span>
          </div>
  
          <h2 class="text-5xl md:text-6xl lg:text-7xl font-black text-gray-900 mb-6 leading-tight">
            {title}
          </h2>
  
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            {subtitle}
          </p>
        </div>
      </AnimateOnScroll>
    </div>

    <div class="flex flex-wrap items-center gap-6 mb-12">
      <div class="flex flex-wrap gap-3">
        <button class="filter-btn active px-6 py-2.5 rounded-full bg-slate-900 text-white text-sm font-semibold transition-all shadow-lg shadow-slate-200" data-filter="all">
          {data.all}
        </button>
        {industries.map((industry) => (
          <button class="filter-btn px-6 py-2.5 rounded-full bg-white border border-slate-200 text-slate-600 text-sm font-semibold hover:border-slate-900 hover:text-slate-900 transition-all" data-filter={industry}>
            {industry}
          </button>
        ))}
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {caseStudies.map((cs, index) => (
        <AnimateOnScroll animation="fade-up" delay={index * 100} class="case-study-card" data-industry={cs.industry}>
          <div class="group relative bg-white border border-slate-100 rounded-3xl overflow-hidden transition-all duration-500 hover:shadow-[0_30px_60px_rgba(0,0,0,0.08)] flex flex-col h-full">
            
            <div class="relative aspect-[16/10] overflow-hidden">
              <img
                src={cs.image}
                alt={cs.brand}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-white/90 backdrop-blur-md text-[10px] font-bold uppercase tracking-widest text-slate-900 rounded-lg shadow-sm">
                  {cs.category}
                </span>
              </div>

              <div class="absolute bottom-4 left-6 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <h3 class="text-white font-bold text-xl">{cs.brand}</h3>
                <p class="text-cyan-400 text-xs font-medium uppercase tracking-wider">{cs.year}</p>
              </div>
            </div>

            <div class="p-8 flex flex-col flex-grow relative overflow-hidden">
              
              <div class="transition-all duration-500 group-hover:opacity-0 group-hover:-translate-y-8">
                <div class="mb-4">
                  <h4 class="text-slate-900 font-bold text-lg mb-1">{cs.brand}</h4>
                  <p class="text-slate-400 text-xs font-medium">{cs.product}</p>
                </div>
                
                <p class="text-sm text-slate-600 leading-relaxed line-clamp-2 mb-6">
                  <span class="font-bold text-slate-900">{data.challenge}:</span> {cs.challenge[locale]}
                </p>

                <div class="flex items-center gap-6 py-4 border-t border-slate-50">
                  {cs.results.slice(0, 2).map((res) => (
                    <div>
                      <div class="text-xl font-black text-slate-900 leading-none mb-1">{res.metric}</div>
                      <div class="text-[9px] uppercase tracking-widest font-bold text-slate-400">{res.label[locale]}</div>
                    </div>
                  ))}
                </div>
              </div>

              <div class="absolute inset-x-8 top-8 opacity-0 group-hover:opacity-100 translate-y-8 group-hover:translate-y-0 transition-all duration-500 pointer-events-none group-hover:pointer-events-auto">
                <svg class="w-8 h-8 text-cyan-500/20 mb-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                </svg>
                <p class="text-base text-slate-700 italic leading-relaxed font-light mb-4">
                  "{cs.testimonial?.[locale] || "Kami sangat puas dengan hasil kolaborasi ini yang melebihi ekspektasi awal kami."}"
                </p>
                <div class="w-10 h-0.5 bg-cyan-500"></div>
              </div>

              <div class="mt-auto pt-6">
                <a 
                  href={`#${cs.id}`} 
                  class="inline-flex items-center justify-center w-full py-3 px-6 rounded-xl border border-slate-200 text-sm font-bold text-slate-900 transition-all duration-300 group/btn hover:bg-cyan-500 hover:border-cyan-500 hover:text-white hover:shadow-[0_10px_20px_-5px_rgba(6,182,212,0.4)]"
                >
                  <span>{data.viewDetails}</span>
                  <svg class="w-4 h-4 ml-2 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      ))}
    </div>
  </div>
</section>

<style>
  /* Menghilangkan scrollbar pada filter bar jika overflow */
  .filter-bar::-webkit-scrollbar {
    display: none;
  }
  
  /* Smooth transition untuk filter */
  .case-study-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Efek glassmorphism pada gambar saat hover */
  .group:hover img {
    filter: brightness(0.8) contrast(1.1);
  }
</style>

<script>
  // Logika Filter Sederhana
  const filterBtns = document.querySelectorAll('.filter-btn');
  const cards = document.querySelectorAll('.case-study-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update UI Button
      filterBtns.forEach(b => b.classList.remove('bg-slate-900', 'text-white', 'shadow-lg'));
      filterBtns.forEach(b => b.classList.add('bg-white', 'text-slate-600'));
      btn.classList.add('bg-slate-900', 'text-white', 'shadow-lg');
      btn.classList.remove('bg-white', 'text-slate-600');

      const filter = btn.getAttribute('data-filter');

      cards.forEach(card => {
        if (filter === 'all' || card.getAttribute('data-industry') === filter) {
          (card as HTMLElement).style.display = 'block';
          setTimeout(() => { (card as HTMLElement).style.opacity = '1'; }, 10);
        } else {
          (card as HTMLElement).style.opacity = '0';
          setTimeout(() => { (card as HTMLElement).style.display = 'none'; }, 500);
        }
      });
    });
  });
</script>