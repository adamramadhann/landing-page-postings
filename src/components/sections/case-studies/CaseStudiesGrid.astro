---
// src/components/sections/CaseStudiesGrid.astro
import AnimateOnScroll from '@/components/ui/AnimateOnScroll.astro';

interface Props {
  locale: 'id' | 'en';
  title: string;
  subtitle: string;
  caseStudies: Array<{
    id: string;
    brand: string;
    product: string;
    logo: string;
    category: string;
    industry: string;
    year: string;
    image: string;
    featured: boolean;
    color: string;
    tags: string[];
    challenge: { id: string; en: string };
    solution: { id: string; en: string };
    results: Array<{
      metric: string;
      label: { id: string; en: string };
    }>;
    testimonial?: { id: string; en: string };
  }>;
  industries: string[];
}

const { locale, title, subtitle, caseStudies, industries } = Astro.props;

const t = {
  id: {
    filter: 'Saring Industri:',
    all: 'Semua Proyek',
    challenge: 'Tantangan',
    viewDetails: 'Explore Case Study'
  },
  en: {
    filter: 'Filter Industry:',
    all: 'All Projects',
    challenge: 'Challenge',
    viewDetails: 'Explore Case Study'
  }
};

const data = t[locale];
---

<section class="relative py-24 bg-slate-950 overflow-hidden" id="case-studies">
  <!-- Animated Background -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Dot Grid Pattern -->
    <div class="absolute inset-0 bg-dot-grid opacity-[0.03]"></div>

    <!-- Floating Gradient Orbs - CYAN/TEAL ONLY -->
    <div class="absolute top-40 left-20 w-[400px] h-[400px] bg-gradient-to-br from-cyan-500/10 to-teal-500/8 rounded-full blur-3xl animate-orb-drift"></div>
    <div class="absolute bottom-40 right-20 w-[500px] h-[500px] bg-gradient-to-tr from-teal-500/8 to-cyan-500/6 rounded-full blur-3xl animate-orb-drift" style="animation-delay: -4s"></div>

    <!-- Floating Particles -->
    <div class="absolute top-1/4 right-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-float-particle opacity-30"></div>
    <div class="absolute top-1/3 left-1/3 w-3 h-3 bg-teal-500 rounded-full animate-float-particle opacity-20" style="animation-delay: -1s"></div>
    <div class="absolute bottom-1/4 right-1/3 w-2 h-2 bg-cyan-400 rounded-full animate-float-particle opacity-25" style="animation-delay: -2s"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mb-16">
      <AnimateOnScroll animation="fade-up" delay={0} duration={700}>
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-slate-900/80 border border-cyan-500/20 backdrop-blur-sm mb-8">
            <span class="w-2.5 h-2.5 rounded-full bg-gradient-to-r from-cyan-400 to-teal-400 animate-pulse"></span>
            <span class="text-sm font-bold text-white uppercase tracking-wider">Case Studies</span>
          </div>

          <h2 class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6 leading-tight">
            {title}
          </h2>

          <p class="text-xl text-gray-400 max-w-3xl mx-auto">
            {subtitle}
          </p>
        </div>
      </AnimateOnScroll>
    </div>

    <div class="flex flex-wrap items-center gap-6 mb-12">
      <div class="flex flex-wrap gap-3">
        <button class="filter-btn active px-6 py-2.5 rounded-full bg-gradient-to-r from-cyan-600 to-teal-600 text-white text-sm font-semibold transition-all shadow-lg shadow-cyan-500/25" data-filter="all">
          {data.all}
        </button>
        {industries.map((industry) => (
          <button class="filter-btn px-6 py-2.5 rounded-full bg-slate-900/60 border border-white/10 text-gray-300 text-sm font-semibold hover:border-cyan-500/30 hover:text-white transition-all" data-filter={industry}>
            {industry}
          </button>
        ))}
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {caseStudies.map((cs, index) => (
        <AnimateOnScroll animation="fade-up" delay={index * 100} class="case-study-card" data-industry={cs.industry}>
          <div class="group relative bg-slate-900/60 border border-white/10 rounded-3xl overflow-hidden transition-all duration-500 hover:shadow-[0_30px_60px_rgba(8,145,178,0.15)] hover:border-cyan-500/30 flex flex-col h-full">

            <div class="relative aspect-[16/10] overflow-hidden">
              <img
                src={cs.image}
                alt={cs.brand}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-slate-900/90 backdrop-blur-md border border-white/20 text-[10px] font-bold uppercase tracking-widest text-white rounded-lg shadow-sm">
                  {cs.category}
                </span>
              </div>

              <div class="absolute bottom-4 left-6 translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                <h3 class="text-white font-bold text-xl">{cs.brand}</h3>
                <p class="text-cyan-400 text-xs font-medium uppercase tracking-wider">{cs.year}</p>
              </div>
            </div>

            <div class="p-8 flex flex-col flex-grow relative overflow-hidden">

              <div class="transition-all duration-500 group-hover:opacity-0 group-hover:-translate-y-8">
                <div class="mb-4">
                  <h4 class="text-white font-bold text-lg mb-1">{cs.brand}</h4>
                  <p class="text-gray-400 text-xs font-medium">{cs.product}</p>
                </div>

                <p class="text-sm text-gray-400 leading-relaxed line-clamp-2 mb-6">
                  <span class="font-bold text-gray-300">{data.challenge}:</span> {cs.challenge[locale]}
                </p>

                <div class="flex items-center gap-6 py-4 border-t border-white/10">
                  {cs.results.slice(0, 2).map((res) => (
                    <div>
                      <div class="text-xl font-black text-white leading-none mb-1">{res.metric}</div>
                      <div class="text-[9px] uppercase tracking-widest font-bold text-gray-500">{res.label[locale]}</div>
                    </div>
                  ))}
                </div>
              </div>

              <div class="absolute inset-x-8 top-8 opacity-0 group-hover:opacity-100 translate-y-8 group-hover:translate-y-0 transition-all duration-500 pointer-events-none group-hover:pointer-events-auto">
                <svg class="w-8 h-8 text-cyan-500/20 mb-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                </svg>
                <p class="text-base text-gray-300 italic leading-relaxed font-light mb-4">
                  "{cs.testimonial?.[locale] || "Kami sangat puas dengan hasil kolaborasi ini yang melebihi ekspektasi awal kami."}"
                </p>
                <div class="w-10 h-0.5 bg-gradient-to-r from-cyan-400 to-teal-400"></div>
              </div>

              <div class="mt-auto pt-6">
                <a
                  href={`#${cs.id}`}
                  class="inline-flex items-center justify-center w-full py-3 px-6 rounded-xl border border-white/10 text-sm font-bold text-white transition-all duration-300 group/btn hover:bg-gradient-to-r hover:from-cyan-600 hover:to-teal-600 hover:border-transparent hover:shadow-[0_10px_20px_-5px_rgba(8,145,178,0.4)]"
                >
                  <span>{data.viewDetails}</span>
                  <svg class="w-4 h-4 ml-2 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </AnimateOnScroll>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes float-particle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    25% {
      transform: translate(20px, -30px) scale(1.1);
      opacity: 0.8;
    }
    50% {
      transform: translate(-10px, -50px) scale(0.9);
      opacity: 0.5;
    }
    75% {
      transform: translate(30px, -20px) scale(1.05);
      opacity: 0.7;
    }
  }

  .animate-float-particle {
    animation: float-particle 10s ease-in-out infinite;
  }

  /* Menghilangkan scrollbar pada filter bar jika overflow */
  .filter-bar::-webkit-scrollbar {
    display: none;
  }

  /* Smooth transition untuk filter */
  .case-study-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Efek glassmorphism pada gambar saat hover */
  .group:hover img {
    filter: brightness(0.8) contrast(1.1);
  }
</style>

<script>
  // Logika Filter Sederhana
  const filterBtns = document.querySelectorAll('.filter-btn');
  const cards = document.querySelectorAll('.case-study-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      // Update UI Button
      filterBtns.forEach(b => b.classList.remove('bg-gradient-to-r', 'from-cyan-600', 'to-teal-600', 'text-white', 'shadow-lg', 'shadow-cyan-500/25'));
      filterBtns.forEach(b => b.classList.add('bg-slate-900/60', 'border-white/10', 'text-gray-300'));
      btn.classList.add('bg-gradient-to-r', 'from-cyan-600', 'to-teal-600', 'text-white', 'shadow-lg', 'shadow-cyan-500/25');
      btn.classList.remove('bg-slate-900/60', 'border-white/10', 'text-gray-300');

      const filter = btn.getAttribute('data-filter');

      cards.forEach(card => {
        if (filter === 'all' || card.getAttribute('data-industry') === filter) {
          (card as HTMLElement).style.display = 'block';
          setTimeout(() => { (card as HTMLElement).style.opacity = '1'; }, 10);
        } else {
          (card as HTMLElement).style.opacity = '0';
          setTimeout(() => { (card as HTMLElement).style.display = 'none'; }, 500);
        }
      });
    });
  });
</script>